<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.conversation.suggestions.tooltip.ConversationSuggestionsBugleTooltipView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="?attr/colorPrimaryContainer">
    <TextView
        android:layout_gravity="start"
        android:id="@+id/tooltip_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bugle_tooltip_margin"
        android:layout_marginBottom="@dimen/bugle_tooltip_title_bottom_margin"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/bugle_tooltip_margin"
        android:layout_marginEnd="@dimen/bugle_tooltip_margin"
        android:layout_alignParentStart="true"
        style="@style/BugleTooltipTitleStyleGm3"/>
    <FrameLayout
        android:id="@+id/tooltip_dismiss_button"
        android:layout_width="@dimen/min_touch_target_size"
        android:layout_height="@dimen/min_touch_target_size"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/dismiss_button"
        android:layout_alignParentEnd="true">
        <ImageView
            android:layout_gravity="end|top"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bugle_tooltip_margin"
            android:src="@drawable/ic_tooltip_close"
            android:tint="?attr/colorOnPrimaryContainer"
            android:importantForAccessibility="no"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tooltip_content"
        android:paddingBottom="@dimen/bugle_tooltip_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bugle_tooltip_margin"
        android:minHeight="@dimen/min_touch_target_size"
        android:layout_below="@+id/tooltip_title"
        android:layout_marginStart="@dimen/bugle_tooltip_margin"
        android:layout_marginEnd="@dimen/bugle_tooltip_margin"
        style="@style/BugleTooltipContentStyleGm3"/>
</com.google.android.apps.messaging.ui.conversation.suggestions.tooltip.ConversationSuggestionsBugleTooltipView>
