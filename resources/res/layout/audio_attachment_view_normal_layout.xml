<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ViewStub
        android:id="@+id/vmt_container_stub"
        android:inflatedId="@+id/vmt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.constraint.ConstraintLayout
        android:layout_gravity="center"
        android:id="@+id/audio_playback"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="@dimen/message_bubble_max_width"
        android:layout_height="@dimen/audio_attachment_view_playback_height"
        android:paddingStart="@dimen/audio_attachment_view_playback_padding_start"
        android:paddingEnd="@dimen/audio_attachment_view_playback_padding_end">
        <include
            android:id="@+id/play_pause_button"
            android:layout_width="@dimen/audio_attachment_button_size"
            android:layout_height="@dimen/audio_attachment_button_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/audio_play_pause_button_v2"/>
        <com.google.android.apps.messaging.shared.audio.attachment.ui.AudioPlaybackSeekBar
            android:layout_gravity="center"
            android:id="@+id/seek"
            android:clipChildren="false"
            android:layout_width="0dp"
            android:layout_height="@dimen/audio_attachment_view_seekbar_height"
            android:contentDescription="@string/audio_attachment_seek_playback_description"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="@dimen/audio_attachment_view_seekbar_margin_start"
            android:layout_marginEnd="@dimen/audio_attachment_view_seekbar_margin_end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/timer"
            app:layout_constraintStart_toEndOf="@+id/play_pause_button"
            app:layout_constraintTop_toTopOf="parent"
            style="@android:style/Widget.SeekBar"/>
        <com.google.android.apps.messaging.shared.audio.attachment.ui.PausableChronometer
            android:textAppearance="?attr/textAppearanceSubhead2"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/google_sans_medium"
            android:letterSpacing="-0.03"
            android:fontFeatureSettings="tnum"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</merge>
