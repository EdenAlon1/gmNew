<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.mediapicker.c2o.gallery.GalleryContentItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/compose2o_media_tile_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/category_content_item_margin"
    android:foreground="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/gallery_content_async_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <com.google.android.apps.messaging.ui.video.VideoOverlayView
        android:layout_gravity="end|bottom"
        android:id="@+id/gallery_content_video_overlay"
        android:padding="@dimen/message_video_overlay_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"/>
    <include layout="@layout/compose2o_selectable_content_item_view"/>
</com.google.android.apps.messaging.ui.mediapicker.c2o.gallery.GalleryContentItemView>
