<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/contact_avatar_view"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/conversation_text_content">
        <ImageView
            android:id="@+id/conversation_icon"
            android:background="@android:color/transparent"
            android:layout_width="@dimen/conversation_list_contact_icon_size"
            android:layout_height="@dimen/conversation_list_contact_icon_size"
            android:contentDescription="@null"
            android:importantForAccessibility="no"/>
        <ViewStub
            android:layout_gravity="end|bottom"
            android:id="@+id/avatar_badge_icon"
            android:layout="@layout/cake_badge"
            android:inflatedId="@+id/avatar_badge_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginBottom="-6dp"
            android:layout_marginEnd="-6dp"/>
        <ViewStub
            android:id="@+id/conversation_checkmark"
            android:layout="@layout/conversation_checkmark_icon"
            android:inflatedId="@+id/conversation_checkmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/conversation_text_content"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attachment_and_timestamp"
        app:layout_constraintStart_toEndOf="@+id/contact_avatar_view"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/ConversationListItemViewTextContentPaddingStyleV3">
        <ImageView
            android:id="@+id/conversation_notification_bell"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications_off_small_light"
            android:tint="?android:attr/textColorPrimary"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:layout_alignParentStart="true"
            style="@style/ConversationListNotificationBellPaddingStyle"/>
        <ViewStub
            android:id="@+id/work_profile_icon"
            android:layout="@layout/work_profile_icon"
            android:inflatedId="@+id/work_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/conversation_notification_bell"/>
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_gravity="center_vertical"
            android:id="@+id/conversation_name"
            android:paddingBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:textAlignment="viewStart"
            android:layout_toEndOf="@+id/work_profile_icon"/>
        <ViewStub
            android:id="@+id/conversation_subject"
            android:layout="@layout/conversation_subject_view"
            android:inflatedId="@+id/conversation_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_name"/>
        <ViewStub
            android:id="@+id/conversation_status_icon"
            android:layout="@layout/conversation_status_icon"
            android:inflatedId="@+id/conversation_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:layout_below="@+id/conversation_subject"
            android:layout_marginEnd="2dp"/>
        <androidx.emoji.widget.EmojiAppCompatTextView
            android:id="@+id/conversation_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_subject"
            android:textAlignment="viewStart"
            android:layout_toEndOf="@+id/conversation_status_icon"
            style="@style/ConversationListItemViewTextStyleV3"/>
        <ViewStub
            android:id="@+id/additional_info_icon"
            android:layout="@layout/additional_info_icon"
            android:inflatedId="@+id/additional_info_icon"
            android:layout_width="@dimen/conversation_list_additional_icon_size"
            android:layout_height="@dimen/conversation_list_additional_icon_size"
            android:layout_below="@+id/conversation_snippet"
            android:layout_marginEnd="@dimen/conversation_list_icon_margin"/>
        <ViewStub
            android:id="@+id/additional_text"
            android:layout="@layout/additional_text_view"
            android:inflatedId="@+id/additional_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_snippet"
            android:layout_toEndOf="@+id/additional_info_icon"/>
        <ViewStub
            android:id="@+id/conversation_status"
            android:layout="@layout/conversation_status_view"
            android:inflatedId="@+id/conversation_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/additional_text"/>
        <ViewStub
            android:id="@+id/conversation_suggestions_view_stub"
            android:layout="@layout/conversation_suggestions_view"
            android:inflatedId="@+id/conversation_suggestions_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_status"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_gravity="end|top"
        android:id="@+id/attachment_and_timestamp"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/conversation_text_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/conversation_timestamp_and_unread_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="12sp"
                android:ellipsize="end"
                android:id="@+id/conversation_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:singleLine="true"/>
            <ViewStub
                android:id="@+id/unread_badge_view_stub"
                android:layout="@layout/unread_badge"
                android:inflatedId="@+id/unread_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/conversation_image_preview"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:layout_width="@dimen/conversation_list_image_preview_size"
            android:layout_height="@dimen/conversation_list_image_preview_size"
            android:scaleType="centerCrop"
            android:contentDescription="@string/message_image_content_description"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/conversation_video_overlay_image"
            android:visibility="gone"
            android:layout_width="@dimen/conversation_list_video_overlay_size"
            android:layout_height="@dimen/conversation_list_video_overlay_size"
            android:src="@drawable/quantum_gm_ic_play_circle_filled_white_24"
            android:contentDescription="@null"/>
        <ViewStub
            android:id="@+id/audio_attachment_view_stub"
            android:layout="@layout/audio_attachment"
            android:inflatedId="@+id/audio_attachment_view"
            android:layout_width="@dimen/conversation_list_image_preview_size"
            android:layout_height="@dimen/conversation_list_image_preview_size"/>
    </FrameLayout>
    <ViewStub
        android:id="@+id/pin_to_top_view_stub"
        android:layout="@layout/pin_to_top_icon"
        android:inflatedId="@+id/pin_to_top_view_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/unread_badge_view_with_message_count_stub"
        app:layout_constraintTop_toBottomOf="@+id/attachment_and_timestamp"
        app:layout_goneMarginEnd="0dp"/>
    <ViewStub
        android:id="@+id/unread_badge_view_with_message_count_stub"
        android:layout="@layout/unread_badge_with_message_count"
        android:inflatedId="@+id/unread_badge_view_with_message_count_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attachment_and_timestamp"/>
</merge>
