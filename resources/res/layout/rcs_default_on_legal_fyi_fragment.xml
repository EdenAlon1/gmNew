<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="end"
            android:id="@+id/legal_fyi_close_btn"
            android:background="@null"
            android:paddingTop="@dimen/legal_fyi_close_btn_top_padding"
            android:paddingBottom="@dimen/legal_fyi_close_btn_bottom_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/legal_fyi_close_button_icon"
            android:contentDescription="@string/legal_fyi_close_button_icon_description"
            android:importantForAccessibility="yes"
            android:paddingHorizontal="@dimen/legal_fyi_close_btn_horizontal_padding"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/legal_fyi_am_icon"
            android:paddingTop="@dimen/legal_fyi_am_icon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/legal_fyi_am_icon"
            android:importantForAccessibility="no"/>
        <TextView
            android:textAppearance="?attr/textAppearanceSubhead1"
            android:textSize="@dimen/legal_fyi_title_font_size"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/rcs_default_on_legal_fyi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/legal_fyi_title_margin"
            android:textAlignment="center"
            android:layout_marginHorizontal="@dimen/legal_fyi_bottom_sheet_content_margin"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textSize="@dimen/legal_fyi_body_font_size"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textColorLink="?attr/colorPrimaryBrandIcon"
            android:id="@+id/rcs_default_on_legal_fyi_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/legal_fyi_title_margin"
            android:layout_marginBottom="@dimen/legal_fyi_bottom_sheet_content_margin"
            android:textAlignment="textStart"
            android:layout_marginHorizontal="@dimen/legal_fyi_bottom_sheet_content_margin"/>
    </LinearLayout>
</ScrollView>
