<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.apps.messaging.ui.attachment.video.VideoAttachmentView
        android:id="@+id/video_attachment_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/single_attachment_max_height"
        android:minWidth="@dimen/video_attachment_min_width"
        android:minHeight="@dimen/video_attachment_min_height"
        app:videoAllowCrop="true"
        app:videoCornerRadius="@dimen/attachment_rounded_corner_radius"/>
</FrameLayout>
