<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="100dp"
    android:paddingEnd="0dp">
    <TextView
        android:id="@+id/mcc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apn_mcc"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/mcc_entry"
        android:background="@android:drawable/editbox_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:inputType="number"
        android:layout_toEndOf="@+id/mcc_label"/>
    <TextView
        android:id="@+id/mnc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/apn_mnc"
        android:layout_below="@+id/mcc_entry"
        android:layout_alignParentStart="true"/>
    <EditText
        android:id="@+id/mnc_entry"
        android:background="@android:drawable/editbox_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcc_entry"
        android:inputType="number"
        android:layout_toEndOf="@+id/mnc_label"/>
</RelativeLayout>
