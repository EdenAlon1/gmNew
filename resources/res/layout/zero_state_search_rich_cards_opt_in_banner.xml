<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zero_state_search_rich_card_opt_in_banner_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/zero_state_search_location_card_margin_bottom"
    app:cardBackgroundColor="?attr/colorPrimaryBackground"
    app:strokeColor="?attr/colorOutlineVariant">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/zero_state_search_rich_cards_opt_in_banner_buttons_margin_bottom">
        <TextView
            android:textAppearance="?attr/textAppearanceSubhead1"
            android:textColor="?attr/colorOnSurface"
            android:gravity="start"
            android:id="@+id/zero_state_search_rich_cards_opt_in_banner_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zero_state_search_rich_cards_opt_in_banner_margin"
            android:text="@string/zero_state_search_rich_cards_opt_in_banner_title"
            android:layout_marginStart="@dimen/zero_state_search_rich_cards_opt_in_banner_margin"
            android:layout_marginEnd="@dimen/zero_state_search_rich_cards_opt_in_banner_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="@dimen/zero_state_search_rich_cards_opt_in_banner_summary_font_size"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="start"
            android:id="@+id/zero_state_search_rich_cards_opt_in_banner_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zero_state_search_rich_cards_opt_in_banner_title_margin_bottom"
            android:minHeight="@dimen/accessibility_min_height_target"
            android:lineSpacingMultiplier="@dimen/H5_spacing_multiplier"
            android:layout_marginStart="@dimen/zero_state_search_rich_cards_opt_in_banner_margin"
            android:layout_marginEnd="@dimen/zero_state_search_rich_cards_opt_in_banner_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zero_state_search_rich_cards_opt_in_banner_title"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_state_search_rich_cards_opt_in_banner_opt_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zero_state_search_rich_cards_opt_in_banner_summary_margin_bottom"
            android:text="@string/zero_state_search_rich_cards_opt_in_banner_opt_in_button_text"
            android:layout_marginEnd="@dimen/zero_state_search_rich_cards_opt_in_banner_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zero_state_search_rich_cards_opt_in_banner_text"
            style="@style/RichCardConsentPositiveButtonStyle"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/zero_state_search_rich_cards_opt_in_banner_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zero_state_search_rich_cards_opt_in_banner_summary_margin_bottom"
            android:text="@string/zero_state_search_rich_cards_opt_in_banner_cancel_button_text"
            app:layout_constraintEnd_toStartOf="@+id/zero_state_search_rich_cards_opt_in_banner_opt_in_button"
            app:layout_constraintTop_toBottomOf="@+id/zero_state_search_rich_cards_opt_in_banner_text"
            style="@style/RichCardConsentNegativeButtonStyle"/>
    </android.support.constraint.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
