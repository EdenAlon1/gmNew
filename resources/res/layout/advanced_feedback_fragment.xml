<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/advanced_feedback_fragment"
    android:paddingTop="@dimen/action_bar_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/advanced_feedback_activity_report_message_title"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/advanced_feedback_activity_disclaimer"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">
            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/advanced_feedback_activity_type_of_issue_title"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/advanced_feedback_fragment_issue_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:errorEnabled="true"
                style="@style/Widget.GoogleMaterial.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                <AutoCompleteTextView
                    android:id="@+id/advanced_feedback_fragment_issue_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/advanced_feedback_activity_type_of_issue_hint"
                    android:editable="false"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advanced_feedback_activity_feedback_data_title"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/advanced_feedback_fragment_checkbox_list"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:id="@+id/advanced_feedback_share_with_partner_title"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advanced_feedback_activity_sharing_with_partner_title"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/advanced_feedback_share_with_external_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="8dp">
            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <CheckBox
                    android:layout_gravity="center"
                    android:id="@+id/advanced_feedback_share_with_external_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/CheckBoxStyle"/>
                <TextView
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/advanced_feedback_activity_sharing_with_partner_checkbox_text"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
