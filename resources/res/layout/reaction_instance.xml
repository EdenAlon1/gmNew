<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="yes">
    <ImageView
        android:id="@+id/participant_image"
        android:layout_width="@dimen/participant_image_size"
        android:layout_height="@dimen/participant_image_size"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:id="@+id/participant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/participant_name_margin_start"
        app:layout_constraintBottom_toTopOf="@+id/participant_from_ios"
        app:layout_constraintEnd_toStartOf="@+id/participant_reaction"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/participant_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/ReactionInstanceParticipantNameTextStyle"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:id="@+id/participant_from_ios"
        android:focusable="false"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/participant_source_iphone"
        android:importantForAccessibility="yes"
        android:screenReaderFocusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/participant_name"
        app:layout_constraintStart_toStartOf="@+id/participant_name"
        app:layout_constraintTop_toBottomOf="@+id/participant_name"
        style="@style/ReactionInstanceParticipantSourceTextStyle"/>
    <androidx.emoji.widget.EmojiAppCompatTextView
        android:layout_gravity="center"
        android:id="@+id/participant_reaction"
        android:layout_width="@dimen/participant_reaction_size"
        android:layout_height="@dimen/participant_reaction_size"
        android:includeFontPadding="false"
        android:importantForAccessibility="no"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/participant_name"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
