<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/link_preview_tap_to_load_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/link_preview_placeholder_height">
        <ImageView
            android:id="@+id/link_preview_tap_to_load_icon"
            android:layout_width="@dimen/link_preview_refresh_icon_size"
            android:layout_height="@dimen/link_preview_refresh_icon_size"
            android:layout_marginBottom="@dimen/link_preview_refresh_icon_margin"
            android:src="@drawable/quantum_ic_refresh_grey600_24"
            android:scaleType="fitCenter"
            android:tint="?attr/colorOnSurfaceVariant"/>
        <TextView
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:id="@+id/link_preview_tap_to_load_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_preview_tap_to_load"
            android:contentDescription="@string/link_preview_tap_to_load_button_description"/>
    </LinearLayout>
</merge>
