<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/scroll_view"
    android:paddingTop="@dimen/phone_number_input_vertical_padding"
    android:paddingBottom="@dimen/phone_number_input_vertical_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/phone_number_input_horizontal_padding"
    android:paddingEnd="@dimen/phone_number_input_horizontal_padding"
    app:layout_constraintVertical_chainStyle="spread_inside">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textAppearanceSubhead1"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="400dp"
            android:text="@string/phone_number_input_title_text_v2"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_number_input_body_top_margin"
            android:maxWidth="400dp"
            android:text="@string/phone_number_input_body_text_v2"
            android:lineSpacingMultiplier="@dimen/banner_subtitle_text_line_spacing_multiplier"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>
        <TextView
            android:textAppearance="?attr/textAppearanceSubhead2"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:id="@+id/multi_sim_subtitle"
            android:focusable="false"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/phone_number_input_multi_sim_subtitle_height"
            android:layout_marginTop="@dimen/phone_number_input_multi_sim_subtitle_top_margin"
            android:drawablePadding="5dp"
            android:paddingStart="@dimen/phone_number_input_multi_sim_subtitle_horizontal_padding"
            android:paddingEnd="@dimen/phone_number_input_multi_sim_subtitle_horizontal_padding"
            android:layout_marginStart="@dimen/phone_number_input_multi_sim_subtitle_horizontal_margin"
            android:layout_marginEnd="@dimen/phone_number_input_multi_sim_subtitle_horizontal_margin"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/body"/>
        <TextView
            android:textAppearance="?attr/textAppearanceCaption"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textColorLink="?attr/colorPrimaryBrandIcon"
            android:id="@+id/tos_reminder_text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textDirection="locale"
            android:textAlignment="center"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/multi_sim_subtitle"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/country_code_text_container"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_number_input_text_input_top_margin"
            android:hint="@string/country_code_hint"
            android:layout_marginEnd="@dimen/phone_number_input_text_input_spacing"
            app:layout_constraintEnd_toStartOf="@+id/phone_number_text_container"
            app:layout_constraintHorizontal_weight="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tos_reminder_text"
            style="?attr/textInputFilledStyle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/country_code_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_number_text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/phone_number_input_hint"
            android:layout_marginStart="@dimen/phone_number_input_text_input_spacing"
            app:layout_constraintBottom_toBottomOf="@+id/country_code_text_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.6"
            app:layout_constraintStart_toEndOf="@+id/country_code_text_container"
            app:layout_constraintTop_toTopOf="@+id/country_code_text_container"
            style="?attr/textInputFilledStyle">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.constraintlayout.helper.widget.Flow
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_number_input_button_top_margin"
            app:constraint_referenced_ids="cancel_button,continue_button"
            app:flow_horizontalStyle="spread_inside"
            app:flow_verticalAlign="center"
            app:flow_verticalGap="8dp"
            app:flow_verticalStyle="spread"
            app:flow_wrapMode="chain"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_code_text_container"/>
        <com.google.android.material.button.MaterialButton
            android:textColor="?attr/colorPrimaryBrandNonIcon"
            android:id="@+id/cancel_button"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_number_input_button_top_margin"
            android:text="@string/phone_number_input_negative_button_for_mt_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_code_text_container"
            style="@style/Widget.GoogleMaterial.Button.TextButton"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continue_button"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/phone_number_input_button_top_margin"
            android:text="@string/phone_number_input_positive_button_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/country_code_text_container"
            style="@style/Widget.GoogleMaterial.Button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
