<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_location_browser"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/main_container"
        android:background="?android:attr/colorBackground"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <FrameLayout
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="noHideDescendants"/>
            <ImageView
                android:layout_gravity="end|bottom"
                android:id="@+id/my_location_button"
                android:background="@drawable/fab_my_location_bg_m2"
                android:padding="@dimen/fab_my_location_padding"
                android:layout_width="@dimen/fab_my_location_size"
                android:layout_height="@dimen/fab_my_location_size"
                android:layout_marginBottom="4dp"
                android:src="@drawable/quantum_ic_my_location_googblue_18"
                android:scaleType="fitXY"
                android:tint="?attr/colorPrimaryBrandNonIcon"
                android:contentDescription="@string/location_attachment_picker_my_location"
                android:layout_marginEnd="4dp"
                android:elevation="@dimen/fab_elevation"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/select_location_bar_container"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/location_attachment_picker_updating_location"
            android:importantForAccessibility="yes">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/select_location_bar_info_icon"
                android:background="?attr/selectableItemBackground"
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/quantum_ic_my_location_grey600_24"
                android:tint="?attr/colorOnSurfaceVariant"
                android:importantForAccessibility="no"
                android:layout_marginStart="16dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/select_location_bar_text_container"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:layout_weight="1"
                android:importantForAccessibility="noHideDescendants"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <TextView
                    android:id="@+id/select_location_bar_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/location_attachment_picker_updating_location"
                    style="@style/LocationAttachmentPickerSelectBarLabel"/>
                <TextView
                    android:id="@+id/select_location_bar_title"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/LocationAttachmentPickerSelectBarTitle"/>
                <TextView
                    android:id="@+id/select_location_bar_subtitle"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/LocationAttachmentPickerSelectBarSubtitle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/select_location_bar_send_icon_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="noHideDescendants"
                android:layout_marginEnd="20dp">
                <ImageView
                    android:id="@+id/select_location_bar_send_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_compose_send"
                    android:tint="?attr/colorPrimaryBrandNonIcon"
                    android:importantForAccessibility="no"/>
                <TextView
                    android:textColor="?attr/colorPrimaryBrandNonIcon"
                    android:id="@+id/select_location_bar_send_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sms_text"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:importantForAccessibility="no"
                    style="@style/MessageIndicatorStyle"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/nearby_location_list"
            android:visibility="gone"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/search_results_list"
        android:background="?android:attr/colorBackground"
        android:visibility="gone"
        android:fitsSystemWindows="true"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/location_permissions_needed_container"
        android:background="?attr/colorPrimary"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/location_permissions_needed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_attachment_picker_need_location_permissions_title"
            app:layout_constraintBottom_toTopOf="@+id/location_permissions_needed_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/LocationAttachmentPickerNeedPermissionsTitle"/>
        <TextView
            android:gravity="center"
            android:id="@+id/location_permissions_needed_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_attachment_picker_need_location_permissions_subtitle"
            app:layout_constraintBottom_toTopOf="@+id/location_permissions_needed_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_permissions_needed_title"
            style="@style/LocationAttachmentPickerNeedPermissionsSubtitle"/>
        <Button
            android:id="@+id/location_permissions_needed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location_attachment_picker_need_location_permissions_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_permissions_needed_subtitle"/>
    </android.support.constraint.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
