<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.conversation.suggestions.ConversationSuggestionsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:importantForAccessibility="no">
    <ViewStub
        android:id="@+id/p2p_conversation_suggestions_tooltip_view_stub"
        android:inflatedId="@+id/p2p_conversation_suggestions_tooltip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/p2p_conversation_suggestion_tooltip_margin_top"
        android:layout_marginBottom="@dimen/p2p_conversation_suggestion_tooltip_margin_bottom"
        android:layout_marginStart="@dimen/p2p_conversation_suggestion_tooltip_margin_start"
        android:layout_marginEnd="@dimen/p2p_conversation_suggestion_tooltip_margin_end"/>
    <HorizontalScrollView
        android:layout_gravity="bottom"
        android:id="@+id/suggestion_list_scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:gravity="end|bottom"
            android:orientation="horizontal"
            android:id="@+id/suggestion_list_container"
            android:clipToPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/conversation_suggestion_bubble_container_height"
            android:paddingEnd="@dimen/conversation_suggestion_view_horizontal_padding"/>
    </HorizontalScrollView>
</com.google.android.apps.messaging.ui.conversation.suggestions.ConversationSuggestionsView>
