<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.appsettings.RcsSimStatusView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.apps.messaging.ui.appsettings.RcsMultiSimStatusCheckboxView
        android:id="@+id/rcs_multi_sim_checkbox"
        android:layout_width="@dimen/rcs_multi_sim_status_checkbox_touch_target_size"
        android:layout_height="@dimen/rcs_multi_sim_status_checkbox_touch_target_size"
        android:layout_marginTop="@dimen/rcs_multi_sim_status_checkbox_top_margin"
        android:layout_marginStart="@dimen/rcs_multi_sim_status_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/rcs_sim_status_title_text"
        android:textColor="?android:attr/textColorPrimary"
        android:id="@+id/rcs_sim_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rcs_sim_status_vertical_margin"
        android:layout_marginStart="@dimen/rcs_multi_sim_status_horizontal_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="@+id/tos_tooltip_info_view"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/rcs_multi_sim_checkbox"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/tos_tooltip_info_view"
        android:visibility="gone"
        android:layout_width="@dimen/rcs_sim_status_tooltip_dimensions"
        android:layout_height="@dimen/rcs_sim_status_tooltip_dimensions"
        android:src="@drawable/quantum_ic_info_outline_black_24"
        android:tint="?attr/colorOnSurfaceVariant"
        android:layout_marginStart="@dimen/rcs_sim_status_tooltip_start_margin"
        android:layout_marginEnd="@dimen/rcs_sim_status_tooltip_end_margin"
        app:layout_constraintBottom_toBottomOf="@+id/rcs_sim_status_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/rcs_sim_status_title"
        app:layout_constraintTop_toTopOf="@+id/rcs_sim_status_title"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/rcs_sim_status_summary_text"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/rcs_sim_status_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rcs_multi_sim_status_horizontal_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/rcs_sim_status_summary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/rcs_multi_sim_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/rcs_sim_status_title"
        app:layout_goneMarginBottom="@dimen/rcs_sim_status_bottom_margin"/>
    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/rcs_sim_status_summary_text"
        android:textColor="?android:attr/textColorSecondary"
        android:id="@+id/rcs_sim_status_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rcs_sim_status_vertical_margin"
        android:layout_marginStart="@dimen/rcs_multi_sim_status_horizontal_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/verify_number_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/rcs_multi_sim_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/rcs_sim_status_status_text"
        app:layout_goneMarginBottom="@dimen/rcs_sim_status_bottom_margin"/>
    <com.google.android.material.button.MaterialButton
        android:gravity="center"
        android:id="@+id/verify_number_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rcs_sim_status_bottom_margin"
        android:text="@string/rcs_verify_number"
        android:layout_marginStart="@dimen/rcs_multi_sim_status_horizontal_margin"
        android:layout_alignParentStart="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/rcs_multi_sim_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/rcs_sim_status_summary"/>
</com.google.android.apps.messaging.ui.appsettings.RcsSimStatusView>
