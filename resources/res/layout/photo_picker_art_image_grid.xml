<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center_vertical"
        android:id="@+id/photo_picker_art_image_grid_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/photo_picker_art_home_section_title_bottom_margin"
        android:drawablePadding="@dimen/photo_picker_art_section_title_drawable_padding"
        android:drawableTint="?attr/colorOnSurfaceVariant"
        android:layout_marginHorizontal="@dimen/photo_picker_art_home_screen_margin"/>
    <TableLayout
        android:id="@+id/photo_picker_art_image_grid_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/photo_picker_art_image_grid_divider"
        android:stretchColumns="*"
        android:showDividers="middle"/>
</merge>
