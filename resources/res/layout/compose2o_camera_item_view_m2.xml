<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.mediapicker.c2o.gallery.GalleryCameraItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@drawable/compose2o_tile_background"
    android:layout_width="@dimen/camera_item_width"
    android:layout_height="@dimen/camera_item_height"
    android:layout_margin="@dimen/category_content_item_margin"
    android:foreground="?attr/selectableItemBackground">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/full_screen_camera_item_icon"
            android:layout_width="@dimen/camera_icon_width"
            android:layout_height="@dimen/camera_icon_height"
            android:src="@drawable/ic_camera_alt_gray"
            android:tint="?attr/colorOnSurfaceVariant"/>
        <TextView
            android:textSize="@dimen/camera_text_size"
            android:textColor="?attr/colorOnSurface"
            android:id="@+id/full_screen_camera_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/c2o_content_item_vertical_spacing_icon_text"
            android:text="@string/c2o_camera_button_text"/>
    </LinearLayout>
</com.google.android.apps.messaging.ui.mediapicker.c2o.gallery.GalleryCameraItemView>
