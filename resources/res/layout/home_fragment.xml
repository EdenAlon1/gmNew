<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/home_fragment_container"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/bottom_layout"
        android:background="@drawable/bottomsheet_background"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:elevation="@dimen/banner_elevation">
        <ViewStub
            android:id="@+id/conversation_list_rcs_welcome_message_stub"
            android:layout="@layout/conversation_list_rcs_welcome_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ViewStub
            android:id="@+id/conversation_list_rcs_success_single_sim_popup_stub"
            android:layout="@layout/conversation_list_rcs_success_single_sim_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ViewStub
            android:id="@+id/conversation_list_rcs_success_multi_sim_popup_stub"
            android:layout="@layout/conversation_list_rcs_success_multi_sim_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@android:id/list"
        android:fitsSystemWindows="true"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="?android:attr/listSelector"
        android:dividerHeight="0px"
        android:contentDescription="@string/conversation_list_description"
        android:importantForAccessibility="no"/>
    <ViewStub
        android:layout_gravity="center_vertical"
        android:id="@+id/list_empty_view_stub"
        android:layout="@layout/list_empty_view"
        android:inflatedId="@+id/list_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/conversation_list_empty_text_bottom_margin"/>
    <ViewStub
        android:layout_gravity="center_vertical"
        android:id="@+id/conversation_list_not_default_sms_app_stub"
        android:layout="@layout/conversation_list_not_default_sms_app"
        android:inflatedId="@+id/conversation_list_not_default_sms_app_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"/>
    <ViewStub
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/go_to_top_stub"
        android:layout="@null"
        android:inflatedId="@+id/go_to_top_inflated_view"
        android:layout_width="@dimen/go_to_top_view_height"
        android:layout_height="@dimen/go_to_top_view_height"
        android:layout_marginBottom="@dimen/go_to_top_view_margin_bottom"/>
    <ViewStub
        android:layout_gravity="end|bottom"
        android:id="@+id/fab_stub"
        android:layout="@null"
        android:inflatedId="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/conversation_list_fab_margin_bottom_end"
        android:layout_marginEnd="@dimen/conversation_list_fab_margin_bottom_end"/>
    <ViewStub
        android:id="@+id/searchbar_stub"
        android:layout="@null"
        android:inflatedId="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ViewStub
        android:id="@+id/toolbar_stub"
        android:layout="@null"
        android:inflatedId="@null"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <View
        android:id="@+id/gk_tooltip_hack"
        android:focusable="false"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:importantForAccessibility="no"/>
    <FrameLayout
        android:id="@+id/mini_cdp_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
