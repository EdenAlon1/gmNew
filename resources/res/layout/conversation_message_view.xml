<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.conversation.message.ConversationMessageView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_message_view"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ConversationMessageViewStyle">
    <android.support.v7.widget.AppCompatTextView
        android:textAppearance="?attr/textAppearanceSubhead1"
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/message_separator"
        android:paddingTop="@dimen/timestamp_top_padding"
        android:paddingBottom="@dimen/timestamp_bottom_padding"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        style="@style/ConversationMessageMetadata"/>
    <com.google.android.apps.messaging.shared.ui.ContactIconView
        android:id="@+id/contact_icon"
        android:clickable="true"
        android:layout_width="@dimen/conversation_message_contact_icon_size"
        android:layout_height="@dimen/conversation_message_contact_icon_size"
        android:importantForAccessibility="no"
        app:contactIconSize="large"/>
    <com.google.android.apps.messaging.ui.conversation.message.ConversationMessageBubbleView
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatTextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/message_sender_name"
            android:paddingBottom="4dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ConversationMessageMetadata"/>
        <ViewStub
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/change_category_view_stub"
            android:visibility="gone"
            android:inflatedId="@+id/change_category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ConversationMessageMetadata"/>
        <ViewStub
            android:id="@+id/reply_snippet"
            android:inflatedId="@+id/reply_snippet_bubble_inflated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ViewStub
            android:id="@+id/message_attachments_view_stub"
            android:layout="@layout/message_attachments_view"
            android:inflatedId="@+id/message_attachments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/message_text_and_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/urgent_indicator"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/urgent_indicator"
                style="@style/UrgentIndicator"/>
            <ViewStub
                android:id="@+id/message_subject_view_stub"
                android:layout="@layout/message_subject_view"
                android:inflatedId="@+id/subject_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.google.android.apps.messaging.ui.conversation.message.ClickFixingEmojiAppCompatTextView
                android:textColorHighlight="#00ffffff"
                android:id="@+id/message_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                style="@style/ConversationMessage"/>
            <ViewStub
                android:id="@+id/message_animated_emoji_view_stub"
                android:layout="@layout/message_animated_emoji_view"
                android:inflatedId="@+id/message_animated_emoji_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ViewStub
            android:id="@+id/message_link_preview_view_stub"
            android:layout="@layout/message_link_preview_view"
            android:inflatedId="@+id/message_link_preview_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.apps.messaging.ui.conversation.message.ConversationMessageBubbleView>
    <ViewStub
        android:id="@+id/reply_button"
        android:inflatedId="@+id/reply_button_inflated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ViewStub
        android:id="@+id/message_badges"
        android:layout="@layout/badges_recycler_view"
        android:inflatedId="@+id/message_badges_inflated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ViewStub
        android:id="@+id/suggestion_shortcut"
        android:layout="@layout/suggestion_shortcut_button"
        android:inflatedId="@+id/suggestion_shortcut_inflated"
        android:layout_width="@dimen/suggestion_shortcut_size"
        android:layout_height="@dimen/suggestion_shortcut_size"/>
    <ViewStub
        android:id="@+id/reminder_icon"
        android:inflatedId="@+id/reminder_icon_inflated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.apps.messaging.ui.conversation.message.ConversationMessageMetadataView
        android:orientation="horizontal"
        android:id="@+id/message_metadata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="noHideDescendants"/>
</com.google.android.apps.messaging.ui.conversation.message.ConversationMessageView>
