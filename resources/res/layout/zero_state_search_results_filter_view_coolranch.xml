<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.search.resultsview.ResultsFilterView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone"
    android:scrollbars="none"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/zero_state_search_box_margin_start_end"
    android:paddingEnd="@dimen/zero_state_search_box_margin_start_end">
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/zero_state_search_results_filter_group_content_description"
        app:selectionRequired="true"
        app:singleLine="true"
        app:singleSelection="true">
        <com.google.android.material.chip.Chip
            android:id="@+id/starred_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_state_search_starred"
            android:textAlignment="center"
            app:chipIcon="@drawable/quantum_gm_ic_star_outline_vd_theme_24"
            app:chipIconVisible="true"
            style="@style/Widget.Bugle.Chip.SearchFilter"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/images_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_state_search_images"
            android:textAlignment="center"
            app:chipIcon="@drawable/quantum_gm_ic_image_vd_theme_24"
            app:chipIconVisible="true"
            style="@style/Widget.Bugle.Chip.SearchFilter"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/videos_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_state_search_videos"
            android:textAlignment="center"
            app:chipIcon="@drawable/quantum_gm_ic_movie_vd_theme_24"
            app:chipIconVisible="true"
            style="@style/Widget.Bugle.Chip.SearchFilter"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/places_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_state_search_places"
            android:textAlignment="center"
            app:chipIcon="@drawable/quantum_gm_ic_place_vd_theme_24"
            app:chipIconVisible="true"
            style="@style/Widget.Bugle.Chip.SearchFilter"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/links_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero_state_search_links"
            android:textAlignment="center"
            app:chipIcon="@drawable/quantum_gm_ic_link_vd_theme_24"
            app:chipIconVisible="true"
            style="@style/Widget.Bugle.Chip.SearchFilter"/>
    </com.google.android.material.chip.ChipGroup>
</com.google.android.apps.messaging.ui.search.resultsview.ResultsFilterView>
