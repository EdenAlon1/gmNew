<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:liftOnScroll="true">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/photo_picker_google_account_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:navigationContentDescription="@string/op3_close"
                app:navigationIcon="@drawable/quantum_ic_close_vd_theme_24">
                <com.google.android.libraries.material.productlockup.ProductLockupView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/op3_preview_google_account"/>
            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <ViewAnimator
            android:id="@+id/photo_picker_view_animator_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/photo_picker_content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/photo_picker_preview_action_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?android:attr/actionBarSize"
                        app:title="@string/op3_preview_profile_picture"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:gravity="center_vertical"
                        android:id="@+id/photo_picker_preview_info_message"
                        android:background="@drawable/photo_picker_preview_banner_background"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:minHeight="48dp"
                        android:drawablePadding="16dp"
                        android:drawableTint="?attr/colorOnSurfaceVariant"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="14dp"
                        app:drawableStartCompat="@drawable/quantum_gm_ic_info_vd_theme_24"/>
                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:id="@+id/photo_picker_preview_intro_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/op3_preview_intro_message"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintWidth_max="400dp"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:gravity="center_vertical"
                            android:id="@+id/photo_picker_preview_visibility_message"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="12dp"
                            android:drawableTint="?attr/colorOnSurfaceVariant"
                            android:paddingVertical="16dp"
                            app:drawableStartCompat="@drawable/photo_picker_preview_visibility_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/photo_picker_preview_intro_message"
                            app:layout_constraintWidth_max="400dp"/>
                        <View
                            android:id="@+id/photo_picker_preview_divider"
                            android:background="?attr/colorHairline"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/photo_picker_preview_visibility_message"
                            app:layout_constraintWidth_max="400dp"/>
                        <ImageView
                            android:id="@+id/photo_picker_preview_profile_image"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:paddingVertical="24dp"
                            app:layout_constraintDimensionRatio="h, 1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/photo_picker_preview_divider"
                            app:layout_constraintWidth_max="400dp"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:id="@+id/photo_picker_preview_button_container"
                            android:paddingBottom="24dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/photo_picker_preview_profile_image"
                            app:layout_constraintWidth_max="400dp">
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/photo_picker_preview_add_button"
                                android:visibility="visible"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/op3_preview_add"
                                android:layout_weight="2"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:iconSize="18dp"
                                style="@style/Widget.GoogleMaterial.Button.Icon"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/photo_picker_preview_edit_button"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/op3_preview_change"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:iconSize="18dp"
                                style="@style/Widget.GoogleMaterial.Button.StrokedButton.Icon"/>
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/photo_picker_preview_delete_button"
                                android:visibility="gone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="@string/op3_preview_remove"
                                android:layout_weight="1"
                                app:iconGravity="textStart"
                                app:iconPadding="8dp"
                                app:iconSize="18dp"
                                style="@style/Widget.GoogleMaterial.Button.StrokedButton.Icon"/>
                        </LinearLayout>
                    </android.support.constraint.ConstraintLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/photo_picker_loading_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:indicatorColor="?attr/colorPrimaryGoogle"
                app:indicatorSize="4dp"/>
            <com.google.android.libraries.user.profile.photopicker.common.view.error.FullscreenErrorView
                android:id="@+id/photo_picker_error_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ViewAnimator>
    </LinearLayout>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/photo_picker_prompt_parent_sheet"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
