<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/message_text"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sim_message_margin"
        android:layout_marginTop="@dimen/sim_message_text_margin_top"
        android:layout_marginRight="@dimen/sim_message_margin"
        style="@style/ConversationMessage"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/message_sender_name"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sim_message_margin"
            android:layout_marginTop="@dimen/sim_message_status_margin_top"
            android:layout_marginRight="@dimen/sim_message_margin"
            android:layout_marginBottom="@dimen/sim_message_status_margin_bottom"
            style="@style/ConversationMessageMetadata"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/message_timestamp"
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sim_message_margin"
            android:layout_marginTop="@dimen/sim_message_status_margin_top"
            android:layout_marginRight="@dimen/sim_message_margin"
            android:layout_marginBottom="@dimen/sim_message_status_margin_bottom"
            style="@style/ConversationMessageMetadata"/>
    </LinearLayout>
</LinearLayout>
