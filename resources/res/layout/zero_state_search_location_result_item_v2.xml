<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/zero_state_search_location_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/zero_state_search_location_card_margin_bottom"
    app:cardBackgroundColor="?attr/colorPrimaryBackground"
    app:strokeColor="?attr/colorOutlineVariant">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textAppearance="?attr/textAppearanceSubhead1"
            android:textColor="?attr/colorOnSurface"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/zero_state_search_location_street_level_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zero_state_search_location_card_text_margin"
            android:maxLines="1"
            android:layout_marginStart="@dimen/zero_state_search_location_card_text_margin"
            android:layout_marginEnd="@dimen/zero_state_search_location_card_text_margin"
            app:layout_constraintEnd_toStartOf="@+id/zero_state_search_location_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/zero_state_search_location_city_level_address_text_size"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:ellipsize="end"
            android:gravity="start"
            android:id="@+id/zero_state_search_location_city_level_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/zero_state_search_location_city_level_address_margin_top"
            android:maxLines="1"
            android:layout_marginStart="@dimen/zero_state_search_location_card_text_margin"
            android:layout_marginEnd="@dimen/zero_state_search_location_card_text_margin"
            app:layout_constraintEnd_toStartOf="@+id/zero_state_search_location_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zero_state_search_location_street_level_address"/>
        <TextView
            android:gravity="start"
            android:id="@+id/zero_state_search_location_sender_and_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/zero_state_search_location_card_text_margin"
            android:layout_marginStart="@dimen/zero_state_search_location_card_text_margin"
            android:layout_marginEnd="@dimen/zero_state_search_location_card_text_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/zero_state_search_location_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zero_state_search_location_city_level_address"
            app:layout_constraintVertical_bias="1"
            style="@style/ZeroStateSearchLinkAndLocationSenderStyle"/>
        <ImageView
            android:id="@+id/zero_state_search_location_image"
            android:layout_width="@dimen/zero_state_search_location_card_map_width"
            android:layout_height="match_parent"
            android:src="@drawable/zero_state_search_location_map_placeholder_card"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ViewStub
            android:id="@+id/zero_state_search_location_star_icon"
            android:layout="@layout/zero_state_search_result_star_icon"
            android:inflatedId="@+id/zero_state_search_location_star_icon"
            android:layout_width="@dimen/zero_state_search_result_star_icon_size"
            android:layout_height="@dimen/zero_state_search_result_star_icon_size"
            android:layout_marginTop="@dimen/zero_state_search_result_star_icon_top_margin"
            android:layout_marginEnd="@dimen/zero_state_search_result_star_icon_end_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
