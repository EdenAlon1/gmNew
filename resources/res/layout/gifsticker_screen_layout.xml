<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gifs_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gifsticker_screen_recycler_view"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ViewStub
        android:id="@+id/error_prompt"
        android:layout="@layout/error_prompt"
        android:inflatedId="@+id/error_prompt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/gifsticker_categories_tab_top_border"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/gifsticker_categories_tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gifsticker_categories_tab_layout"/>
    <ViewStub
        android:id="@+id/gifsticker_categories_tab_layout"
        android:layout="@layout/gifsticker_tabs_layout"
        android:inflatedId="@+id/gifsticker_categories_tab_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/gifsticker_tab_height"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
