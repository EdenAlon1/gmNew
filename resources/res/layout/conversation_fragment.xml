<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.util.InsetAwareRelativeLayoutWithBottomPadding xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/message_list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_manager_fragment"/>
    <FrameLayout
        android:id="@+id/banners_fragment"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/input_manager_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:textSize="@dimen/tombstone_text_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:id="@+id/no_reply_pinned_message"
        android:padding="@dimen/tombstone_additional_count_padding"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_reply_pinned_message_text"
        android:layout_above="@+id/draft_editor_fragment"
        android:textAlignment="center"/>
    <FrameLayout
        android:id="@+id/sim_picker_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/draft_editor_fragment"/>
    <com.google.android.apps.messaging.conversation.scrolltobottombutton.ConversationScrollToBottomButton
        android:id="@+id/conversation_scroll_to_bottom_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/scroll_to_bottom_button_margin_bottom"
        android:layout_above="@+id/draft_editor_fragment"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/focus_sink"
        android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"/>
    <ViewStub
        android:id="@+id/draft_toolstone_stub"
        android:inflatedId="@+id/draft_toolstone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/conversation_bottom_bar_fragment"/>
    <FrameLayout
        android:id="@+id/conversation_bottom_bar_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/draft_editor_fragment"/>
    <FrameLayout
        android:id="@+id/draft_editor_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/message_compose_view_container_with_c2o"/>
    <ViewStub
        android:id="@+id/message_compose_view_container_with_c2o"
        android:layout="@layout/compose_message_view_with_c2o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/input_manager_fragment"/>
    <ViewStub
        android:id="@+id/conversation_statusbar_scrim_stub"
        android:layout="@layout/conversation_statusbar_scrim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</com.google.android.apps.messaging.ui.util.InsetAwareRelativeLayoutWithBottomPadding>
