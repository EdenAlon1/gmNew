<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.apps.messaging.shared.ui.ContactIconView
        android:layout_gravity="center_vertical"
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/contact_icon_view_normal_size"
        android:layout_height="@dimen/contact_icon_view_normal_size"
        android:importantForAccessibility="no"
        app:contactIconSize="normal"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/details_container"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/ContactCardLinearLayoutStyle">
        <TextView
            android:ellipsize="end"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            style="@style/ParticipantListItem"/>
        <TextView
            android:ellipsize="end"
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            style="@style/ContactListItemDetail"/>
    </LinearLayout>
    <ImageButton
        android:layout_gravity="center"
        android:id="@+id/add_a_photo"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/people_add_a_photo_width"
        android:layout_height="match_parent"
        android:src="@drawable/quantum_gm_ic_add_a_photo_black_24"
        android:tint="?android:attr/colorControlNormal"
        android:contentDescription="@string/people_and_options_add_a_photo"
        android:paddingStart="@dimen/people_add_a_photo_padding_start"
        android:paddingEnd="@dimen/people_add_a_photo_padding_end"/>
    <ViewStub
        android:id="@+id/no_encryption_lock_icon_stub"
        android:layout="@layout/no_encryption_lock_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <ViewStub
        android:id="@+id/overflow_menu_button_stub"
        android:layout="@layout/overflow_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
</merge>
