<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.mediapicker.c2o.gallery.GalleryDeviceCameraItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="@dimen/camera_item_width"
    android:layout_height="@dimen/camera_item_height"
    android:layout_margin="@dimen/category_content_item_margin">
    <ImageView
        android:id="@+id/device_camera_picture_button"
        android:background="@drawable/compose2o_tile_background"
        android:layout_width="@dimen/camera_item_width"
        android:layout_height="@dimen/device_camera_item_height"
        android:layout_marginBottom="@dimen/device_camera_item_margin"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/quantum_ic_camera_alt_white_24"
        android:scaleType="center"
        android:tint="?attr/colorOnSurfaceVariant"
        android:contentDescription="@string/camera_switch_to_still_mode"/>
    <ImageView
        android:id="@+id/device_camera_video_button"
        android:background="@drawable/compose2o_tile_background"
        android:layout_width="@dimen/camera_item_width"
        android:layout_height="@dimen/device_camera_item_height"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/comms_gm_ic_videocam_vd_theme_24"
        android:scaleType="center"
        android:tint="?attr/colorOnSurfaceVariant"
        android:contentDescription="@string/camera_switch_to_video_mode"/>
</com.google.android.apps.messaging.ui.mediapicker.c2o.gallery.GalleryDeviceCameraItemView>
