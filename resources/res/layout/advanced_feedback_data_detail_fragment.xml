<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="top"
    android:paddingTop="@dimen/action_bar_height"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:fillViewport="true">
        <TextView
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advanced_feedback_data_detail_description_title"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:id="@+id/advanced_feedback_data_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingMultiplier="1.2"/>
        <TextView
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:layout_gravity="center_horizontal"
            android:id="@+id/advanced_feedback_data_detail_rationale_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:id="@+id/advanced_feedback_data_detail_rationale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingMultiplier="1.2"/>
    </LinearLayout>
</ScrollView>
