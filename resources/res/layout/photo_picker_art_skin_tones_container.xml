<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_picker_edit_skin_tone_swatches_container"
    android:background="?android:attr/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textColor="@color/google_blue300"
        android:id="@+id/art_editor_skin_tone_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op3_remove_dialog_cancel_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/photo_picker_edit_color_picker_label"
        android:id="@+id/art_editor_skin_tone_layer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textColor="@color/google_blue300"
        android:id="@+id/art_editor_skin_tone_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op3_update_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
    <HorizontalScrollView
        android:layout_gravity="center"
        android:id="@+id/photo_picker_edit_skin_tone_swatches_scroll_view"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/art_editor_skin_tone_layer_name">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/photo_picker_skin_tone_swatches_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
