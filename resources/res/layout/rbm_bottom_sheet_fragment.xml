<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/rbm_bottom_sheet_icon"
        android:layout_width="@dimen/rbm_bottom_sheet_icon_size"
        android:layout_height="@dimen/rbm_bottom_sheet_icon_size"
        android:layout_marginTop="@dimen/rbm_bottom_sheet_info_margin_top"
        android:src="@drawable/quantum_ic_sim_card_black_24"
        android:tint="?android:attr/textColorPrimary"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toStartOf="@+id/rbm_bottom_sheet_sim_carrier_name"
        app:layout_constraintStart_toEndOf="@+id/rbm_bottom_sheet_sim_index"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead1"
        android:textSize="@dimen/rbm_bottom_sheet_info_text_size"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/rbm_bottom_sheet_sim_carrier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rbm_bottom_sheet_info_margin_top"
        android:textAlignment="viewStart"
        android:layout_marginStart="@dimen/rbm_bottom_sheet_icon_margin"
        android:layout_marginEnd="@dimen/rbm_bottom_sheet_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rbm_bottom_sheet_icon"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead1"
        android:textSize="@dimen/rbm_bottom_sheet_info_text_size"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/rbm_bottom_sheet_sim_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rbm_bottom_sheet_info_margin_top"
        android:textAlignment="viewEnd"
        android:layout_marginStart="@dimen/rbm_bottom_sheet_margin"
        android:layout_marginEnd="@dimen/rbm_bottom_sheet_icon_margin"
        app:layout_constraintEnd_toStartOf="@+id/rbm_bottom_sheet_icon"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead1"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/rbm_bottom_sheet_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rbm_bottom_sheet_title_margin"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/rbm_bottom_sheet_margin"
        android:layout_marginEnd="@dimen/rbm_bottom_sheet_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbm_bottom_sheet_icon"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textColorLink="?attr/colorPrimaryBrandIcon"
        android:id="@+id/rbm_bottom_sheet_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rbm_bottom_sheet_title_margin"
        android:lineSpacingMultiplier="@dimen/H5_spacing_multiplier"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/rbm_bottom_sheet_margin"
        android:layout_marginEnd="@dimen/rbm_bottom_sheet_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbm_bottom_sheet_title"/>
    <com.google.android.material.button.MaterialButton
        android:textColor="?attr/colorOnPrimaryBrandIcon"
        android:layout_gravity="center"
        android:id="@+id/rbm_bottom_sheet_sim_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rbm_bottom_sheet_title_margin"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="@dimen/rbm_bottom_sheet_margin"
        android:layout_marginEnd="@dimen/rbm_bottom_sheet_margin"
        app:backgroundTint="?attr/colorPrimaryBrandNonIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbm_bottom_sheet_body"/>
</android.support.constraint.ConstraintLayout>
