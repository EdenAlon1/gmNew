<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/photo_picker_art_color_picker"
    android:background="?android:attr/colorBackground"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textColor="@color/google_blue300"
        android:id="@+id/art_editor_color_picker_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op3_remove_dialog_cancel_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
    <com.google.android.material.textview.MaterialTextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/photo_picker_edit_color_picker_label"
        android:id="@+id/art_editor_layer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textColor="@color/google_blue300"
        android:id="@+id/art_editor_color_picker_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/op3_update_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>
    <com.google.android.libraries.user.profile.photopicker.art.edit.ColorPickerView
        android:id="@+id/art_editor_color_picker"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="@dimen/photo_picker_edit_color_picker_size"
        android:layout_height="@dimen/photo_picker_edit_color_picker_size"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/op3_art_color_picker_wheel_description"
        app:inner_circle_radius="@dimen/photo_picker_edit_color_picker_inner_circle_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/art_editor_layer_name"
        app:selection_circle_radius="13dp"
        app:selection_circle_radius_pressed="18dp"
        app:selection_circle_shadow_alpha="102"
        app:selection_circle_shadow_blur="6dp"
        app:selection_circle_shadow_color="@color/google_black"
        app:selection_circle_shadow_offset="4dp"
        app:selection_circle_stroke_size="1dp"
        app:selection_circle_stroke_size_pressed="2dp"
        app:wheel_stroke_size="50dp"/>
</android.support.constraint.ConstraintLayout>
