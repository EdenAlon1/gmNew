<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.apps.messaging.shared.ui.ContactIconView
        android:layout_gravity="center_vertical"
        android:id="@+id/contact_icon"
        android:layout_width="@dimen/contact_icon_view_normal_size"
        android:layout_height="@dimen/contact_icon_view_normal_size"
        android:importantForAccessibility="no"
        android:layout_marginEnd="@dimen/vcard_attachment_icon_text_margin"
        app:contactIconSize="normal"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:id="@+id/details_container"
        android:background="@android:color/transparent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/name"
            style="@style/VCardNameStyle"/>
        <TextView
            android:id="@+id/details"
            style="@style/VCardDetailsStyle"/>
    </LinearLayout>
</merge>
