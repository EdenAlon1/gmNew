<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    class="com.google.android.apps.messaging.ui.contact.ContactListItemView$ContactItemViewRow">
    <FrameLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.apps.messaging.shared.ui.ContactIconView
            android:id="@+id/contact_icon"
            android:clickable="false"
            android:layout_width="@dimen/contact_list_row_icon_size"
            android:layout_height="@dimen/contact_list_row_icon_size"
            android:importantForAccessibility="no"
            app:contactIconSize="normal"/>
        <ImageView
            android:id="@+id/contact_checkmark"
            android:visibility="gone"
            android:layout_width="@dimen/contact_list_row_icon_size"
            android:layout_height="@dimen/contact_list_row_icon_size"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="@null"
            android:importantForAccessibility="no"/>
        <ProgressBar
            android:layout_gravity="center_horizontal"
            android:id="@+id/contact_pending"
            android:background="@drawable/ic_check_circle_background"
            android:visibility="gone"
            android:layout_width="@dimen/contact_list_row_icon_size"
            android:layout_height="@dimen/contact_list_row_icon_size"
            android:indeterminateOnly="true"
            android:indeterminateDrawable="@drawable/rcs_contact_pending"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:id="@+id/contact_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                style="@style/ContactListItem"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/work_profile_icon"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:tint="?android:attr/colorControlNormal"
                app:srcCompat="@drawable/ic_work_profile"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:id="@+id/contact_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                style="@style/ContactListItemDetail"/>
            <TextView
                android:id="@+id/contact_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewEnd"
                style="@style/ContactListItemDetailType"/>
        </LinearLayout>
    </LinearLayout>
</view>
