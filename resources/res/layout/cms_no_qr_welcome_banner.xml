<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/qr_welcome_banner_hangouts_top_spacing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ditto_welcome_banner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cms_illustration"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qr_welcome_animation_height"
            android:layout_marginBottom="16dp"
            android:importantForAccessibility="no"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"/>
        <TextView
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_gravity="center"
            android:id="@+id/ditto_url_text_view"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/cms_no_qr_welcome_title_text"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/cms_welcome_banner_hangouts_side_margin"
            android:layout_marginEnd="@dimen/cms_welcome_banner_hangouts_side_margin"/>
        <TextView
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_gravity="center"
            android:id="@+id/ditto_bottom_text"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/cms_no_qr_welcome_bottom_text"
            android:lineSpacingMultiplier="@dimen/banner_subtitle_text_line_spacing_multiplier"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/cms_welcome_banner_hangouts_side_margin"
            android:layout_marginEnd="@dimen/cms_welcome_banner_hangouts_side_margin"/>
        <TextView
            android:orientation="vertical"
            android:id="@+id/ditto_footer_text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/simplified_ditto_welcome_banner"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>
