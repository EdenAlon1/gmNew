<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/qr_scanner_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/connected_to_web_setting"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/settings_list_item_height"
        style="@style/ConversationSettingsItemStyle">
        <LinearLayout
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ditto_settings_connected_to_web_notification_title"
                android:maxLines="2"
                style="@style/SettingsListItem"/>
            <TextView
                android:ellipsize="end"
                android:id="@+id/ditto_settings_notification_description_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ditto_settings_device_paired_notification_description"
                android:maxLines="3"
                style="@style/SettingsListItemDetail"/>
        </LinearLayout>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/connected_to_web_switch_button"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"/>
    </LinearLayout>
    <View
        android:background="?android:attr/listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/while_using_web_setting"
        android:background="?android:attr/selectableItemBackground"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ConversationSettingsItemStyle">
        <LinearLayout
            android:gravity="start|center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ditto_settings_while_using_web_notification_title"
                android:maxLines="2"
                style="@style/SettingsListItem"/>
            <TextView
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ditto_settings_while_using_web_notification_description"
                android:maxLines="3"
                style="@style/SettingsListItemDetail"/>
        </LinearLayout>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/while_using_web_switch_button"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingEnd="1dp"/>
    </LinearLayout>
    <View
        android:background="?android:attr/listDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
