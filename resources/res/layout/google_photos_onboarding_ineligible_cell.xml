<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gallery_photos_promo_signed_out_container"
    android:background="@drawable/compose2o_tile_background"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/c2o_gallery_onboarding_padding"
    style="@style/HqmsPromoCardStyle">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/bottom_borderline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"/>
    <ImageView
        android:id="@+id/gallery_promo_photos_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/product_logo_photos_color_24"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06"/>
    <ImageView
        android:id="@+id/gallery_hqms_close_button"
        android:padding="@dimen/c2o_gallery_promo_onboarding_button_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/quantum_gm_ic_close_vd_theme_24"
        android:minWidth="@dimen/c2o_gallery_promo_onboarding_minimum_touchable_size"
        android:minHeight="@dimen/c2o_gallery_promo_onboarding_minimum_touchable_size"
        android:contentDescription="@string/google_photos_onboarding_close_button_description"
        android:layout_marginEnd="@dimen/c2o_gallery_onboarding_close_button_padding"
        app:layout_constraintBottom_toBottomOf="@+id/gallery_promo_photos_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gallery_promo_photos_logo"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead1"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/gallery_onboarding_promo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/c2o_gallery_promo_onboarding_header_min_width"
        android:maxLines="@integer/photos_onboarding_header_max_lines"
        android:textDirection="locale"
        android:layout_marginEnd="@dimen/c2o_gallery_onboarding_padding"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:id="@+id/gallery_onboarding_promo_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/c2o_gallery_promo_onboarding_body_min_width"
        android:maxLines="@integer/photos_onboarding_description_max_lines"
        android:textDirection="locale"
        android:layout_marginEnd="@dimen/c2o_gallery_onboarding_padding"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69"/>
    <Button
        android:id="@+id/gallery_hqms_onboarding_learn_more"
        android:text="@string/google_photos_onboarding_learn_more"
        android:layout_marginEnd="@dimen/c2o_gallery_sign_in_onboarding_button_margin"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_borderline"
        app:layout_constraintEnd_toStartOf="@+id/gallery_hqms_onboarding_next"
        style="@style/Compose2oGalleryOnboardingButtonStyle"/>
    <Button
        android:id="@+id/gallery_hqms_onboarding_next"
        android:text="@string/google_photos_onboarding_next"
        android:layout_marginEnd="@dimen/c2o_gallery_onboarding_padding"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_borderline"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Compose2oGalleryOnboardingButtonStyle"/>
</androidx.constraintlayout.widget.ConstraintLayout>
