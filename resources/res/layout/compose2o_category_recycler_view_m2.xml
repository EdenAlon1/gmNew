<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/c2o_category_recycler_view_container"
    android:clipChildren="false"
    android:clipToPadding="false"
    style="@style/CategoryStyle">
    <android.support.v7.widget.RecyclerView
        android:layout_gravity="end"
        android:id="@+id/c2o_category_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.apps.messaging.ui.mediapicker.c2o.content.CategoryToggleView
        android:id="@+id/c2o_category_toggle"
        android:clipChildren="false"
        android:clipToPadding="false"
        style="@style/CategoryToggleViewStyle">
        <FrameLayout
            android:layout_gravity="center_vertical"
            android:id="@+id/c2o_category_toggle_frame"
            android:background="@drawable/compose2o_category_toggle_background_m2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackground"
            style="@style/CategoryNotImportantForAccessibilityStyle"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/c2o_category_toggle_icon"
            android:layout_width="@dimen/category_toggle_icon_width"
            android:layout_height="@dimen/category_toggle_icon_height"
            android:tint="?attr/colorPrimaryBrandIcon"
            style="@style/CategoryNotImportantForAccessibilityStyle"/>
    </com.google.android.apps.messaging.ui.mediapicker.c2o.content.CategoryToggleView>
</FrameLayout>
