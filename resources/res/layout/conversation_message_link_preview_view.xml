<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/link_preview_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/thumbnail_image_container"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/thumbnail_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/link_preview_thumbnail_height"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/thumbnail_image_overlay"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/link_preview_thumbnail_height"/>
        </FrameLayout>
        <include layout="@layout/conversation_message_link_preview_content"/>
    </LinearLayout>
    <include layout="@layout/conversation_message_link_preview_tap_to_load"/>
    <include layout="@layout/conversation_message_link_preview_loading"/>
</merge>
