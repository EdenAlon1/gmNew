<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="?attr/colorPrimaryBackground"
    android:paddingBottom="@dimen/conversation_start_view_bottom_padding"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:background="@drawable/contact_icon_faded_highlight_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/conversation_start_view_contact_icon_top_margin"
        android:layout_marginStart="@dimen/conversation_start_view_horizontal_margin"
        android:layout_marginEnd="@dimen/conversation_start_view_horizontal_margin">
        <com.google.android.apps.messaging.shared.ui.ContactIconView
            android:layout_gravity="center"
            android:id="@+id/contact_icon"
            android:layout_width="@dimen/conversation_start_view_contact_icon_width"
            android:layout_height="@dimen/conversation_start_view_contact_icon_height"
            android:layout_margin="@dimen/conversation_start_view_contact_icon_margin"
            android:contentDescription="@string/rbm_business_logo_icon_content_description"
            app:contactIconSize="xlarge"/>
        <ImageView
            android:layout_gravity="end|bottom"
            android:id="@+id/verification_avatar_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_verified_icon_border"
            android:contentDescription="@string/rbm_verification_icon_content_description"/>
    </FrameLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/verification_row_layout"
        android:background="@drawable/conversation_start_button_background"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/conversation_start_view_verification_min_height"
        android:importantForAccessibility="yes"
        android:paddingStart="@dimen/conversation_start_verification_horizontal_padding"
        android:paddingEnd="@dimen/conversation_start_verification_horizontal_padding"
        android:layout_marginStart="@dimen/conversation_start_view_horizontal_margin"
        android:layout_marginEnd="@dimen/conversation_start_view_horizontal_margin">
        <TextView
            android:textAppearance="?attr/textAppearanceSubhead1"
            android:textSize="@dimen/conversation_start_view_tertiary_text_size"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center_vertical"
            android:id="@+id/verification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rbm_platform_verified_by_vodafone"
            android:textIsSelectable="false"/>
        <ImageView
            android:gravity="center_vertical"
            android:id="@+id/verification_image"
            android:layout_width="@dimen/conversation_start_view_verification_icon_width"
            android:layout_height="@dimen/conversation_start_view_verification_icon_height"
            android:src="@drawable/quantum_ic_verified_user_googblue_18"
            android:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@string/rbm_verification_icon_content_description"
            android:layout_marginStart="@dimen/conversation_start_verification_margin"/>
    </LinearLayout>
    <Space
        android:id="@+id/conversation_start_content_spacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/conversation_start_view_content_spacing"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="@dimen/conversation_start_view_description_text_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:ellipsize="end"
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/conversation_start_view_horizontal_margin"
        android:layout_marginEnd="@dimen/conversation_start_view_horizontal_margin"/>
</LinearLayout>
