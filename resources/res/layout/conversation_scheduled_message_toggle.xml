<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.scheduledsend.conversation.ConversationScheduledMessageToggleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="end"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/schedule_send_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="6dp"
        android:src="@drawable/gs_schedule_send_vd_theme_24"
        android:tint="?attr/colorPrimaryBrandIcon"/>
    <TextView
        android:textColor="?attr/colorPrimaryBrandNonIcon"
        android:gravity="end|center_vertical"
        android:layout_gravity="end"
        android:id="@+id/toggle_text_view"
        android:paddingTop="@dimen/scheduled_send_toggle_view_padding_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/scheduled_send_toggle_view_height"/>
</com.google.android.apps.messaging.scheduledsend.conversation.ConversationScheduledMessageToggleView>
