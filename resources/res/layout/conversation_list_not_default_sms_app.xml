<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_list_not_default_sms_app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/default_chat_app_animation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/set_as_default_sub_text"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/default_sms_prompt_image_width"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="14sp"
        android:textColor="?attr/colorOnBackground"
        android:gravity="center"
        android:id="@+id/set_as_default_sub_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/conversation_list_default_app_button_margin_top"
        android:text="@string/conversation_list_default_sms_app_screen_sub_text"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="@dimen/conversation_list_default_app_sub_text_horizontal_margin"
        android:paddingEnd="@dimen/conversation_list_default_app_sub_text_horizontal_margin"
        android:letterSpacing="0.02"
        app:layout_constraintBottom_toTopOf="@+id/set_as_default_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_chat_app_animation"/>
    <com.google.android.material.button.MaterialButton
        android:ellipsize="end"
        android:id="@+id/set_as_default_button"
        android:paddingTop="@dimen/conversation_list_default_app_button_vertical_top_padding"
        android:paddingBottom="@dimen/conversation_list_default_app_button_vertical_bottom_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/conversation_list_default_app_button_margin_top"
        android:layout_marginBottom="@dimen/conversation_list_default_app_button_vertical_bottom_padding"
        android:text="@string/conversation_list_default_sms_app_screen_button_text"
        android:singleLine="true"
        android:paddingStart="@dimen/conversation_list_default_app_button_horizontal_padding"
        android:paddingEnd="@dimen/conversation_list_default_app_button_horizontal_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>
