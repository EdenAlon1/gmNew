<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/abc_dialog_padding_material"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/experiment_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:id="@+id/magic_compose_info_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="2dp"
        android:text="@string/info_dialog_title"
        android:lineHeight="32sp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <TextView
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center_vertical"
            android:id="@+id/magic_compose_info_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/info_dialog_content"
            android:letterSpacing="0.01"/>
    </ScrollView>
</LinearLayout>
