<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:gravity="end"
        android:id="@+id/message_status"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ConversationMessageMetadata"/>
    <ImageView
        android:id="@+id/dots_animation"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sending_dots"
        android:importantForAccessibility="noHideDescendants"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:id="@+id/sim_name"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/ConversationMessageMetadata"/>
    <ImageView
        android:id="@+id/status_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"/>
    <ImageView
        android:id="@+id/message_lock_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:gravity="end"
        android:id="@+id/link_settings"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_to_settings"
        android:layout_weight="1"
        android:contentDescription="@string/content_description_link_to_settings"
        style="@style/ConversationMessageMetadata"/>
</merge>
