<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/audio_preview_container"
        android:background="@drawable/compose_attachment_preview_non_image_bg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="@dimen/audio_attachment_view_compact_width"
        android:layout_height="@dimen/audio_attachment_view_compact_height"
        style="@style/AudioAttachmentPreviewStyle">
        <include
            android:id="@+id/play_pause_button"
            android:layout_width="@dimen/audio_attachment_button_size"
            android:layout_height="@dimen/audio_attachment_button_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/audio_play_pause_button_v2"
            style="@style/AudioAttachmentButtonStyle"/>
        <com.google.android.apps.messaging.shared.audio.attachment.ui.AudioPlaybackSeekBar
            android:layout_gravity="center"
            android:id="@+id/seek"
            android:layout_width="@dimen/audio_attachment_view_compact_seekbar_width"
            android:layout_height="@dimen/audio_attachment_view_compact_seekbar_height"
            android:maxHeight="@dimen/audio_attachment_view_compact_seekbar_height"
            android:minHeight="@dimen/audio_attachment_view_compact_seekbar_height"
            android:layout_weight="1"
            android:contentDescription="@string/audio_attachment_seek_playback_description"
            android:layout_marginStart="@dimen/audio_attachment_view_compact_seekbar_margin_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/play_pause_button"
            app:layout_constraintTop_toTopOf="parent"
            style="@android:style/Widget.ProgressBar.Horizontal"/>
        <com.google.android.apps.messaging.shared.audio.attachment.ui.PausableChronometer
            android:textAppearance="?attr/textAppearanceSubhead2"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="end"
            android:layout_gravity="center"
            android:id="@+id/timer"
            android:layout_width="@dimen/audio_chronometer_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/audio_attachment_view_compact_timer_margin_top"
            android:layout_marginStart="@dimen/audio_attachment_view_compact_timer_margin_start"
            android:letterSpacing="-0.03"
            android:fontFeatureSettings="tnum"
            app:layout_constraintStart_toStartOf="@+id/seek"
            app:layout_constraintTop_toTopOf="@+id/seek"
            style="@style/AudioAttachmentTimerText"/>
    </android.support.constraint.ConstraintLayout>
</merge>
