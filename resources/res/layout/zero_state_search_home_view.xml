<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.apps.messaging.ui.search.homeview.ZeroStateContentGroupsView
        android:id="@+id/zero_state_content_groups"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/zero_state_search_content_groups_vertical_padding">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/zero_state_content_groups_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/zero_state_search_content_groups_horizontal_padding"/>
    </com.google.android.apps.messaging.ui.search.homeview.ZeroStateContentGroupsView>
    <ViewStub
        android:layout_gravity="center_horizontal"
        android:id="@+id/zero_state_content_grid_layout"
        android:layout="@layout/zero_state_content_grid_layout"
        android:inflatedId="@+id/zero_state_content_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>
</LinearLayout>
