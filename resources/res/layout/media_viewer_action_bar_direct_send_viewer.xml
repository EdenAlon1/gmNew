<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/top_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/action_bar_background"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/media_viewer_close_button"
        android:padding="@dimen/media_viewer_button_padding"
        android:layout_width="@dimen/media_viewer_button_size"
        android:layout_height="@dimen/media_viewer_button_size"
        android:layout_margin="@dimen/media_viewer_button_margin"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/quantum_ic_close_18_dark"
        android:contentDescription="@string/media_viewer_close_button_description"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"/>
    <TextView
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?attr/colorOnSurfaceDark"
        android:id="@+id/media_viewer_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toTopOf="@+id/media_viewer_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/media_edit_button"
        app:layout_constraintStart_toEndOf="@+id/media_viewer_close_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody1"
        android:textSize="@dimen/media_viewer_subtitle_text_size"
        android:textColor="?attr/colorOnSurfaceDark"
        android:id="@+id/media_viewer_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/media_viewer_title"
        app:layout_constraintStart_toStartOf="@+id/media_viewer_title"
        app:layout_constraintTop_toBottomOf="@+id/media_viewer_title"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.google.android.material.button.MaterialButton
        android:textStyle="normal"
        android:textColor="?attr/colorOnSurfaceDark"
        android:id="@+id/media_edit_button"
        android:background="?attr/colorOnSurface"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/media_viewer_button_margin"
        android:text="@string/media_viewer_edit_media_description"
        android:contentDescription="@string/media_viewer_edit_media_description"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:icon="@drawable/quantum_gm_ic_edit_white_24"
        app:iconTint="?attr/colorOnSurfaceDark"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        style="@style/MediaViewerTextButton"/>
    <com.google.android.material.button.MaterialButton
        android:textStyle="normal"
        android:textColor="?attr/colorOnSurfaceDark"
        android:id="@+id/direct_send_done_button"
        android:background="?attr/colorOnSurface"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/media_viewer_button_margin"
        android:text="@string/media_viewer_done_label"
        android:contentDescription="@string/direct_send_viewer_done_button_description"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        style="@style/MediaViewerTextButton"/>
    <android.support.constraint.Guideline
        android:orientation="horizontal"
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
