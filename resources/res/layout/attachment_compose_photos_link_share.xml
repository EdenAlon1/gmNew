<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attachment_preview_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/compose_attachment_size"
    style="@style/AttachmentPreviewContainerOutline">
    <com.google.android.apps.messaging.shared.ui.RoundedImageView
        android:id="@+id/attachment_preview_thumbnail"
        android:layout_width="@dimen/attachment_preview_photos_link_share_thumbnail_size"
        android:layout_height="@dimen/attachment_preview_photos_link_share_thumbnail_size"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/attachment_preview_photos_link_share_thumbnail_margin"
        app:imageCornerRadius="@dimen/attachment_preview_photos_link_share_thumbnail_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/attachment_preview_title"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toTopOf="@+id/attachment_preview_description"
        app:layout_constraintStart_toEndOf="@+id/attachment_preview_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/attachment_preview_thumbnail"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/PhotosLinkSharePreviewTitleStyle"/>
    <TextView
        android:id="@+id/attachment_preview_description"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="@+id/attachment_preview_thumbnail"
        app:layout_constraintStart_toEndOf="@+id/attachment_preview_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/attachment_preview_title"
        style="@style/PhotosLinkSharePreviewDescriptionStyle"/>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/attachment_preview_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="attachment_preview_title,attachment_preview_description"/>
    <ImageView
        android:id="@+id/gallery_photos_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/product_logo_photos_color_24"
        android:importantForAccessibility="no"
        android:layout_marginStart="@dimen/attachment_preview_photos_logo_start_margin"
        android:layout_marginEnd="@dimen/attachment_preview_photos_logo_end_margin"
        app:layout_constraintBottom_toBottomOf="@+id/attachment_preview_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/attachment_preview_barrier"
        app:layout_constraintTop_toTopOf="@+id/attachment_preview_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
