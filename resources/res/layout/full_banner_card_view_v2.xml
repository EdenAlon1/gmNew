<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/banner_full_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/banner_description"
        android:paddingStart="12dp"
        android:paddingEnd="8dp">
        <com.google.android.apps.messaging.ui.animation.illustration.IllustrationViewStub
            android:id="@+id/banner_full_icon"
            android:background="@null"
            android:visibility="gone"
            android:layout_width="@dimen/banner2o_icon_size"
            android:layout_height="@dimen/banner2o_icon_size"
            android:importantForAccessibility="no"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/banner_full_title"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/banner2o_full_icon_to_text_margin"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/banner_secondary_icon_stub"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/banner_full_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="4dp"
            style="@style/Banner2oTitleTextStyle"/>
        <TextView
            android:id="@+id/banner_full_body"
            android:visibility="gone"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/banner2o_full_icon_to_text_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/banner_full_icon"
            app:layout_constraintTop_toBottomOf="@+id/banner_full_title"
            app:layout_goneMarginStart="4dp"
            app:layout_goneMarginTop="0dp"
            style="@style/Banner2oBodyTextStyle"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/banner_full_end_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner_full_body"
            style="@style/Banner2oActionButtonStyle"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/banner_full_start_button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/banner_full_end_button"
            app:layout_constraintEnd_toStartOf="@+id/banner_full_end_button"
            style="@style/Banner2oActionButtonStyle"/>
        <TextView
            android:textSize="@dimen/banner2o_secondary_text_size"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:id="@+id/banner_full_count"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/banner_full_title"/>
        <ViewStub
            android:id="@+id/banner_secondary_icon_stub"
            android:layout="@layout/banner_secondary_icon_button"
            android:inflatedId="@+id/banner_secondary_icon"
            android:layout_width="@dimen/banner2o_icon_size"
            android:layout_height="@dimen/banner2o_icon_size"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/banner_close_icon"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/banner_close_icon"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_width="@dimen/banner2o_icon_size"
            android:layout_height="@dimen/banner2o_icon_size"
            android:src="@drawable/quantum_gm_ic_close_black_24"
            android:tint="?attr/colorOnSurface"
            android:contentDescription="@string/full_banner_close_icon_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/banner_chip_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="@dimen/banner2o_chip_width"
        android:layout_height="@dimen/banner2o_chip_height"
        android:contentDescription="@string/full_banner_expand_chip_description"
        android:paddingStart="8dp"
        android:paddingEnd="16dp">
        <ImageView
            android:id="@+id/banner_chip_arrow"
            android:layout_width="@dimen/banner2o_icon_size"
            android:layout_height="@dimen/banner2o_icon_size"
            android:src="@drawable/quantum_ic_keyboard_arrow_left_black_24"
            android:tint="?attr/colorOnSurfaceVariant"/>
        <com.google.android.apps.messaging.ui.animation.illustration.IllustrationViewStub
            android:id="@+id/banner_chip_icon"
            android:background="@null"
            android:visibility="gone"
            android:layout_width="@dimen/banner2o_icon_size"
            android:layout_height="@dimen/banner2o_icon_size"
            android:scaleX="0"
            android:scaleY="0"
            android:importantForAccessibility="no"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
</merge>
