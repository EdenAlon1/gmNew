<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:background="@drawable/badge_background"
    android:clipChildren="false"
    android:layout_width="@dimen/badge_height"
    android:layout_height="@dimen/badge_height"
    android:contentDescription="@string/reminder_badge_content_description"
    android:importantForAccessibility="yes"
    android:elevation="@dimen/badge_elevation">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/reminder_badge_icon"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="@dimen/badge_icon_height"
        android:layout_height="@dimen/badge_icon_weight"
        android:src="@drawable/quantum_gm_ic_alarm_white_24"
        android:tint="@color/badge_icon_tint_color"
        android:contentDescription="@string/reminder_badge_content_description"
        android:importantForAccessibility="yes"/>
</FrameLayout>
