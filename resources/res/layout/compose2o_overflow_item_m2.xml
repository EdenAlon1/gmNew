<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/compose2o_tile_background"
    android:layout_width="@dimen/category_overflow_width"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/category_content_item_margin"
    android:layout_marginBottom="@dimen/category_content_item_margin"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginStart="@dimen/category_content_item_margin"
    android:layout_marginEnd="@dimen/category_content_overflow_item_margin_end">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/overflow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_gray_24px"
        android:tint="?attr/colorPrimaryBrandIcon"/>
</FrameLayout>
