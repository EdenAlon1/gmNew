<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.conversation.simpicker.SimPickerItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:padding="@dimen/sim_picker_item_padding"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/SimPickerItemLinearLayout">
        <TextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SimPickerItemNameText"/>
        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SimPickerItemDetailText"/>
    </LinearLayout>
    <com.google.android.apps.messaging.conversation.simpicker.SimIconView
        android:id="@+id/sim_icon"
        android:layout_width="@dimen/sim_picker_item_icon_size"
        android:layout_height="@dimen/sim_picker_item_icon_size"
        android:importantForAccessibility="no"
        app:contactIconSize="normal"
        style="@style/SimPickerItemIcon"/>
</com.google.android.apps.messaging.conversation.simpicker.SimPickerItemView>
