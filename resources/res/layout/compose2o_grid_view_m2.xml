<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/colorPrimaryBackground"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.apps.messaging.ui.mediapicker.c2o.ContentGridView
        android:id="@+id/c2o_content_grid"
        android:paddingTop="@dimen/c2o_padding_top"
        android:paddingBottom="@dimen/c2o_padding_bottom"
        android:fitsSystemWindows="true"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"/>
    <View
        android:layout_gravity="top"
        android:background="?attr/colorOutlineVariant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/compose2o_border_thickness"
        android:importantForAccessibility="no"/>
    <View
        android:layout_gravity="top"
        android:id="@+id/compose2o_shadow"
        android:background="@drawable/compose2o_shadow"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/compose2o_shadow_height"
        android:layout_marginTop="@dimen/compose2o_border_thickness"
        android:importantForAccessibility="no"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
