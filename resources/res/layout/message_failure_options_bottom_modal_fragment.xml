<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fail_to_send_modal2"
    android:background="@drawable/rounded_bottom_sheet"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_text"
        android:layout_gravity="center_vertical"
        android:id="@+id/turn_on_data_setting_row"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/device_data_connection_unavailable"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/quantum_gm_ic_settings_black_24"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/message_send_in_progress_row"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn_on_data_setting_row">
        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:enabled="false"
            android:textSize="16sp"
            android:textColor="@color/bottom_sheet_text"
            android:layout_gravity="center"
            android:id="@+id/message_send_in_progress_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.54"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_text"
        android:layout_gravity="center_vertical"
        android:id="@+id/resend_message_option_row"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fail_to_send_retry_description_v2"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_compose_send"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_send_in_progress_row"/>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_text"
        android:layout_gravity="center_vertical"
        android:id="@+id/resend_xms_message_option_row"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resend_xms_message"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/ic_compose_send"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_message_option_row"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/fallback_message_option_row"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resend_xms_message_option_row">
        <TextView
            android:textAppearance="?attr/textAppearanceCaption"
            android:textSize="10sp"
            android:textColor="@color/bottom_sheet_text"
            android:layout_gravity="center_horizontal"
            android:id="@+id/fallback_message_icon_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_protocol_label"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:drawableTop="@drawable/ic_compose_send"
            android:importantForAccessibility="no"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/bottom_sheet_text"
            android:layout_gravity="center"
            android:id="@+id/fallback_message_option_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fail_to_send_fallback_description"/>
    </LinearLayout>
    <TextView
        android:textSize="16sp"
        android:textColor="@color/bottom_sheet_text"
        android:layout_gravity="center_vertical"
        android:id="@+id/delete_message_option_row"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@drawable/quantum_gm_ic_delete_vd_theme_24"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fallback_message_option_row"/>
</android.support.constraint.ConstraintLayout>
