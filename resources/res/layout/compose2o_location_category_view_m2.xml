<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.mediapicker.c2o.location.LocationContentCategoryView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_content_category_view"
    android:background="@drawable/compose2o_tile_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/c2o_location_item_height"
    android:importantForAccessibility="no">
    <TextView
        android:textColor="?attr/colorOnSurface"
        android:layout_gravity="center"
        android:id="@+id/location_content_map_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c2o_location_updating_text"/>
    <TextView
        android:textColor="?attr/colorOnSurface"
        android:gravity="center"
        android:id="@+id/location_category_permission_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/c2o_location_permission_text"/>
    <com.google.android.gms.maps.MapView xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/location_content_map_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:liteMode="true"
        map:uiCompass="false"
        map:uiRotateGestures="false"
        map:uiScrollGestures="false"
        map:uiTiltGestures="false"
        map:uiZoomControls="false"
        map:uiZoomGestures="false"/>
    <TextView
        android:textSize="@dimen/c2o_location_send_location_text_size"
        android:textColor="?attr/colorOnBackground"
        android:layout_gravity="top|center_horizontal"
        android:id="@+id/location_content_text_bubble"
        android:background="@drawable/btn_location_bubble"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/c2o_location_bubble_text"
        android:importantForAccessibility="no"
        android:backgroundTint="?android:attr/colorBackground"/>
    <View
        android:gravity="center"
        android:id="@+id/location_content_map_touch_target"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/c2o_location_bubble_text"/>
</com.google.android.apps.messaging.ui.mediapicker.c2o.location.LocationContentCategoryView>
