<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.conversation.settings.ConversationSettingsOptionItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    style="@style/ConversationSettingsItemStyle">
    <LinearLayout
        android:gravity="start|center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:ellipsize="end"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/ParticipantListItem"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:ellipsize="end"
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            style="@style/ParticipantListItemDetail"/>
    </LinearLayout>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_button"
        android:focusable="false"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"/>
</com.google.android.apps.messaging.conversation.settings.ConversationSettingsOptionItemView>
