<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/protection_safety_settings_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <FrameLayout
            android:id="@+id/spam_preference_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:persistent="false"
            android:textSize="@dimen/settings_list_detail_text_size"
            android:id="@+id/spam_detection_pref_learn_more"
            android:padding="@dimen/preference_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:allowDividerAbove="true"/>
        <android.support.v4.app.FragmentContainerView
            android:id="@+id/cross_country_preference_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/sensitive_content_pref_container"
            android:padding="@dimen/preference_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:persistent="false"
                android:textSize="@dimen/settings_list_text_size"
                android:id="@+id/sensitive_content_pref_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"/>
            <TextView
                android:persistent="false"
                android:textSize="@dimen/settings_list_detail_text_size"
                android:id="@+id/sensitive_content_pref_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>
        <TextView
            android:persistent="false"
            android:textSize="@dimen/settings_list_detail_text_size"
            android:id="@+id/sensitive_content_pref_learn_more"
            android:padding="@dimen/preference_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:allowDividerAbove="true"/>
    </LinearLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:liftOnScroll="true">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.appbar.AppBarLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
