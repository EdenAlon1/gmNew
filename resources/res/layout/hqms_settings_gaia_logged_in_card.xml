<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hqms_settings_gaia_logged_in_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/hqms_settings_gaia_card_background"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.apps.messaging.shared.ui.RoundedImageView
        android:id="@+id/hqms_settings_gaia_card_profile_image"
        android:layout_width="@dimen/min_touch_target_size"
        android:layout_height="@dimen/min_touch_target_size"
        android:src="@drawable/quantum_gm_ic_account_circle_vd_theme_24"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:layout_marginStart="16dp"
        app:adjustAspectRatio="true"
        app:imageCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/hqms_settings_gaia_card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hqms_settings_gaia_card_background"/>
    <ImageView
        android:background="@drawable/circle_white_bg"
        android:padding="3dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/product_logo_photos_color_24"
        android:importantForAccessibility="no"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/hqms_settings_gaia_card_profile_image"
        app:layout_constraintEnd_toEndOf="@+id/hqms_settings_gaia_card_profile_image"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textColor="?attr/colorOnSurface"
        android:id="@+id/hqms_settings_gaia_card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hqms_settings_gaia_card_text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/hqms_settings_gaia_card_id"
        app:layout_constraintStart_toEndOf="@+id/hqms_settings_gaia_card_profile_image"
        app:layout_constraintTop_toTopOf="@+id/hqms_settings_gaia_card_background"
        app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:id="@+id/hqms_settings_gaia_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/hqms_settings_gaia_card_background"
        app:layout_constraintStart_toStartOf="@+id/hqms_settings_gaia_card_text"
        app:layout_constraintTop_toBottomOf="@+id/hqms_settings_gaia_card_text"
        app:layout_constraintVertical_chainStyle="spread"/>
    <ImageView
        android:id="@+id/hqms_settings_gaia_card_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/quantum_gm_ic_chevron_right_vd_theme_24"
        android:importantForAccessibility="no"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/hqms_settings_gaia_card_background"
        app:layout_constraintRight_toRightOf="@+id/hqms_settings_gaia_card_background"
        app:layout_constraintTop_toTopOf="@+id/hqms_settings_gaia_card_background"/>
</android.support.constraint.ConstraintLayout>
