<?xml version="1.0" encoding="utf-8"?>
<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_touch_target_size"
    android:layout_marginStart="16dp"
    class="com.google.android.apps.messaging.diagnostics.ui.DiagnosticsScenarioView">
    <CheckBox
        android:id="@+id/enable_scenario_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CheckBoxStyle"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/diagnostics_scenario_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DiagnosticsScenarioViewScenarioNameStyle"/>
        <TextView
            android:id="@+id/diagnostics_scenario_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DiagnosticsScenarioViewTextStyle"/>
    </LinearLayout>
</view>
