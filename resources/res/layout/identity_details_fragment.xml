<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/identity_details_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.compose.ui.platform.ComposeView
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:id="@+id/identity_details_compose_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/identity_details_intro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_gravity="center"
            android:id="@+id/identity_details_intro"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/grid_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/identity_details_compose_view"/>
        <TableLayout
            android:id="@+id/grid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/identity_details_learn_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/identity_details_intro">
            <TableRow android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/key_part_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
            </TableRow>
            <TableRow android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/key_part_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
            </TableRow>
            <TableRow android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/key_part_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
                <TextView
                    android:id="@+id/key_part_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/key_part_cell"/>
            </TableRow>
        </TableLayout>
        <TextView
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_gravity="center"
            android:id="@+id/identity_details_learn_more"
            android:paddingLeft="10dp"
            android:paddingTop="35dp"
            android:paddingRight="10dp"
            android:paddingBottom="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.1"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/grid_view"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
