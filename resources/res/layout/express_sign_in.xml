<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.gaia.expresssignin.HqmsExpressSignInTopView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <com.google.android.apps.messaging.ui.rcs.consent.InterceptTouchConstraintLayout
            android:id="@+id/esi_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/express_sign_in_illustration"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                android:contentDescription="@string/express_sign_in_illustration_content_description"
                app:layout_constraintBottom_toTopOf="@+id/logo_bottom_guideline"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/logo_end_guideline"
                app:layout_constraintStart_toStartOf="@+id/logo_start_guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <TextView
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?attr/colorOnSurface"
                android:gravity="center"
                android:id="@+id/esi_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/express_sign_in_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/logo_bottom_guideline"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:id="@+id/esi_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/express_sign_in_sub_title"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/esi_title"
                app:layout_constraintVertical_bias="0.015"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:id="@+id/esi_subtitle_overlap_with_subtitle_fix"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/express_sign_in_sub_title"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/esi_title"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorLink"
                android:gravity="top|center_horizontal"
                android:id="@+id/how_it_works_link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/how_it_works_link_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/esi_subtitle"
                app:layout_constraintVertical_bias="0.064"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="?android:attr/textColorLink"
                android:gravity="top|center_horizontal"
                android:id="@+id/how_it_works_link_overlap_with_subtitle_fix"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/how_it_works_link_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/esi_subtitle_overlap_with_subtitle_fix"
                app:layout_constraintVertical_bias="0.064"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/logo_start_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.069"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:id="@+id/logo_bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.62"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/logo_end_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.93"/>
        </com.google.android.apps.messaging.ui.rcs.consent.InterceptTouchConstraintLayout>
    </ScrollView>
</com.google.android.apps.messaging.gaia.expresssignin.HqmsExpressSignInTopView>
