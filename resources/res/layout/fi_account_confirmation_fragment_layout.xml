<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fi_confirmation_container"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/google_fi_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:src="@drawable/product_logo_fi_color_36"
                android:importantForAccessibility="no"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/google_fi_text"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:id="@+id/google_fi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/google_fi_text"
                android:fontFamily="@font/google_sans"
                app:layout_constraintBottom_toBottomOf="@+id/google_fi_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/google_fi_logo"
                app:layout_constraintTop_toTopOf="@+id/google_fi_logo"/>
            <ImageView
                android:id="@+id/account_avatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/quantum_ic_account_circle_black_48"
                android:tint="?attr/colorOnSurface"
                android:importantForAccessibility="no"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/google_fi_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/google_fi_logo"/>
            <TextView
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:textColor="?android:attr/textColorPrimary"
                android:gravity="center"
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="50dp"
                android:text="@string/fi_account_confirmation_title"
                android:layout_marginStart="56dp"
                android:layout_marginEnd="56dp"
                app:layout_constraintBottom_toTopOf="@+id/sync_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/google_fi_logo"
                app:layout_constraintVertical_bias="0.4"
                app:layout_constraintVertical_chainStyle="packed"/>
            <ImageView
                android:id="@+id/sync_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_gm_ic_sync_black_24"
                android:tint="?attr/colorPrimaryBrandIcon"
                android:importantForAccessibility="no"
                android:layout_marginStart="@dimen/fi_confirmation_icon_row_horizontal_margin"
                app:layout_constraintEnd_toStartOf="@+id/sync_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/sync_text"/>
            <TextView
                android:textColor="?android:attr/textColorPrimary"
                android:id="@+id/sync_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fi_account_confirmation_sync"
                app:layout_constraintBottom_toTopOf="@+id/phone_link_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sync_icon"
                app:layout_constraintTop_toBottomOf="@+id/title_text"
                style="@style/FiAccountConfirmationBulletText"/>
            <ImageView
                android:id="@+id/phone_link_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_gm_ic_phonelink_black_24"
                android:tint="?attr/colorPrimaryBrandIcon"
                android:importantForAccessibility="no"
                android:layout_marginStart="@dimen/fi_confirmation_icon_row_horizontal_margin"
                app:layout_constraintEnd_toStartOf="@+id/phone_link_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/phone_link_text"/>
            <TextView
                android:id="@+id/phone_link_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fi_account_confirmation_phone_link"
                app:layout_constraintBottom_toTopOf="@+id/security_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phone_link_icon"
                app:layout_constraintTop_toBottomOf="@+id/sync_text"
                style="@style/FiAccountConfirmationBulletText"/>
            <ImageView
                android:id="@+id/security_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/quantum_gm_ic_security_black_24"
                android:tint="?attr/colorPrimaryBrandIcon"
                android:importantForAccessibility="no"
                android:layout_marginStart="@dimen/fi_confirmation_icon_row_horizontal_margin"
                app:layout_constraintEnd_toStartOf="@+id/security_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/security_text"/>
            <TextView
                android:id="@+id/security_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fi_account_confirmation_security"
                app:layout_constraintBottom_toTopOf="@+id/learn_more_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/security_icon"
                app:layout_constraintTop_toBottomOf="@+id/phone_link_text"
                style="@style/FiAccountConfirmationBulletText"/>
            <TextView
                android:textSize="@dimen/fi_confirmation_icon_row_text_size"
                android:gravity="center"
                android:id="@+id/learn_more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fi_account_login_learn_more"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/security_text"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/bottom_sheet_container"
        android:background="?attr/colorPrimaryBackground"
        android:paddingTop="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fi_account_confirmation_ok_button"
            app:layout_constraintBottom_toTopOf="@+id/cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/CloudstoreConfirmationButton"/>
        <ProgressBar
            android:id="@+id/sync_data_spinner"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ok_button"
            app:layout_constraintEnd_toEndOf="@+id/ok_button"
            app:layout_constraintTop_toTopOf="@+id/ok_button"
            style="@style/FiAccountConfirmationProgressBar"/>
        <com.google.android.material.button.MaterialButton
            android:textSize="14sp"
            android:gravity="center"
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fi_account_confirmation_cancel_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Widget.GoogleMaterial.Button.TextButton"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
