<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/header_contents"
        android:paddingLeft="@dimen/title_padding"
        android:paddingRight="@dimen/title_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:filterTouchesWhenObscured="true"
        app:layout_collapseMode="parallax">
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:id="@+id/avatar_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true">
            <com.google.android.libraries.messaging.lighter.ui.avatar.AnonymousConversationAvatarView
                android:layout_gravity="center"
                android:id="@+id/conversation_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"/>
            <TextView
                android:textSize="@dimen/conversation_title_size"
                android:textColor="?attr/colorOnSurface"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:importantForAccessibility="no"
                android:fontFamily="@font/google_sans"/>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/conversation_subtitle_size"
            android:textColor="?attr/colorOutline"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:id="@+id/header_subtitle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:fontFamily="sans-serif"/>
    </LinearLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_collapseMode="pin"
        app:navigationContentDescription="@string/back_button_label"
        app:navigationIcon="@drawable/quantum_ic_arrow_back_grey600_24"/>
</merge>
