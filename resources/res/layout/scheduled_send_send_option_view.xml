<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/scheduled_send_send_action_title_text_size"
        android:textColor="?android:attr/textColorPrimary"
        android:id="@+id/scheduled_send_icon_title"
        android:paddingTop="@dimen/scheduled_send_send_action_title_padding_vertical"
        android:paddingBottom="@dimen/scheduled_send_send_action_title_padding_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scheduled_send_send_option_title"
        android:layout_marginEnd="@dimen/scheduled_send_send_action_icon_margin_horizontal"
        android:labelFor="@+id/scheduled_send_send_option_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scheduled_send_send_option_button"/>
    <ImageView
        android:id="@+id/scheduled_send_send_option_button"
        android:padding="@dimen/scheduled_send_send_action_icon_padding"
        android:layout_width="@dimen/scheduled_send_send_action_icon_size"
        android:layout_height="@dimen/scheduled_send_send_action_icon_size"
        android:layout_marginTop="@dimen/scheduled_send_send_action_icon_margin_vertical"
        android:layout_marginBottom="@dimen/scheduled_send_send_action_icon_margin_vertical"
        android:src="@drawable/quantum_gm_ic_schedule_send_black_24"
        android:tint="?attr/colorPrimaryBrandIcon"
        android:contentDescription="@string/scheduled_send_send_option_content_description"
        android:layout_marginEnd="@dimen/scheduled_send_send_action_icon_margin_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scheduled_send_icon_title"/>
</android.support.constraint.ConstraintLayout>
