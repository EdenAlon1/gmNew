<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/BrowseItemStyle">
    <View
        android:background="@drawable/sticker_icon_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/pack_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/pack_icon"
        android:padding="@dimen/browse_sticker_icon_padding"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/favorite_pack_icon"
        android:background="@color/transparent"
        android:visibility="gone"
        android:clickable="false"
        android:layout_width="@dimen/browse_favorite_icon_size"
        android:layout_height="@dimen/browse_favorite_icon_size"
        android:scaleType="centerInside"
        android:tint="@color/favorite_enabled_color"
        android:contentDescription="@string/cd_browse_sticker_packs_item_view_favorite_icon"
        app:layout_constraintBottom_toBottomOf="@+id/pack_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pack_name"
        app:srcCompat="@drawable/quantum_ic_favorite_white_24"/>
    <TextView
        android:textSize="@dimen/browse_pack_name_text_size"
        android:textColor="@color/browse_pack_name_color"
        android:ellipsize="end"
        android:id="@+id/pack_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:fontFamily="@font/google_sans_medium"
        android:textDirection="locale"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/favorite_pack_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pack_icon"/>
    <TextView
        android:textSize="@dimen/browse_pack_author_text_size"
        android:textColor="@color/browse_pack_author_color"
        android:ellipsize="end"
        android:id="@+id/pack_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textDirection="locale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pack_name"/>
</android.support.constraint.ConstraintLayout>
