<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/system_camera_picker_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/system_camera_photo_button"
        android:background="@drawable/gallery_button_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/standard_view_padding"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/quantum_gm_ic_photo_camera_vd_theme_24"
        android:contentDescription="@string/open_system_camera_photo_capture_button_label"
        app:layout_constraintBottom_toTopOf="@+id/system_camera_video_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/system_camera_video_button"
        android:background="@drawable/gallery_button_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/quantum_gm_ic_videocam_vd_theme_24"
        android:contentDescription="@string/open_system_camera_video_capture_button_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/system_camera_photo_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
