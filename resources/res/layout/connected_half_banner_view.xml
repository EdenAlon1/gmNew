<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner_root"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/banner_description">
    <TextView
        android:id="@+id/banner_general_text"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Banner2oGeneralTextStyle"/>
    <ImageView
        android:id="@+id/banner_start_icon"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/banner2o_icon_size"
        android:layout_height="@dimen/banner2o_icon_size"
        android:contentDescription="@string/connected_half_banner_previous_description"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/banner_general_text"
        app:layout_constraintEnd_toStartOf="@+id/banner_end_icon"
        app:layout_constraintTop_toTopOf="@+id/banner_general_text"/>
    <ImageView
        android:id="@+id/banner_end_icon"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="@dimen/banner2o_icon_size"
        android:layout_height="@dimen/banner2o_icon_size"
        android:contentDescription="@string/connected_half_banner_next_description"
        android:layout_marginEnd="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/banner_general_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/banner_general_text"/>
</android.support.constraint.ConstraintLayout>
