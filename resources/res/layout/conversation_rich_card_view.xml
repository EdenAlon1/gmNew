<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.conversation.richcard.ConversationRichCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_rich_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rich_card_margin"
    android:minHeight="@dimen/rich_card_min_height"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="@dimen/rich_card_border_width">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.apps.messaging.ui.conversation.richcard.RichCardMediaAttachmentView
            android:id="@+id/rich_card_left_media"
            android:layout_width="@dimen/rich_card_horizontal_layout_media_width"
            android:layout_height="match_parent"
            android:minHeight="@dimen/rich_card_min_height"
            android:layout_weight="0"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.google.android.apps.messaging.ui.conversation.richcard.RichCardMediaAttachmentView
                android:id="@+id/rich_card_top_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.apps.messaging.ui.conversation.richcard.RichCardContentContainer
                android:orientation="vertical"
                android:id="@+id/rich_card_content_container"
                android:padding="@dimen/rich_card_edge_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textAppearance="?attr/textAppearanceSubhead1"
                    android:textColor="?attr/colorOnSurface"
                    android:ellipsize="end"
                    android:id="@+id/rich_card_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textIsSelectable="false"
                    android:textDirection="locale"/>
                <TextView
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:id="@+id/rich_card_description"
                    android:paddingTop="@dimen/rich_card_description_top_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="?attr/textAppearanceBody2"
                    android:includeFontPadding="false"
                    android:textIsSelectable="false"
                    android:textDirection="locale"/>
                <LinearLayout
                    android:gravity="bottom|center_horizontal"
                    android:orientation="vertical"
                    android:id="@+id/rich_card_suggestions_container"
                    android:paddingTop="@dimen/rich_card_conversation_suggestion_container_top_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/rich_card_conversation_suggestions_divider_m2"
                    android:layout_weight="1"
                    android:showDividers="middle"/>
            </com.google.android.apps.messaging.ui.conversation.richcard.RichCardContentContainer>
        </LinearLayout>
        <com.google.android.apps.messaging.ui.conversation.richcard.RichCardMediaAttachmentView
            android:id="@+id/rich_card_right_media"
            android:layout_width="@dimen/rich_card_horizontal_layout_media_width"
            android:layout_height="match_parent"
            android:minHeight="@dimen/rich_card_min_height"
            android:layout_weight="0"/>
    </LinearLayout>
</com.google.android.apps.messaging.ui.conversation.richcard.ConversationRichCardView>
