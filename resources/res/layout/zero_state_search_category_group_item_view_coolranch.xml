<?xml version="1.0" encoding="utf-8"?>
<com.google.android.apps.messaging.ui.search.homeview.CategoryGroupItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/zero_state_search_category_group_item_bg_coolranch"
    android:paddingTop="@dimen/zero_state_search_content_group_item_vertical_padding_coolranch"
    android:paddingBottom="@dimen/zero_state_search_content_group_item_vertical_padding_coolranch"
    android:layout_width="@dimen/zero_state_search_content_group_item_width"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginEnd="@dimen/zero_state_search_content_groups_horizontal_spacing">
    <ImageView
        android:id="@+id/content_group_item_icon"
        android:layout_width="@dimen/zero_state_search_content_group_item_icon_size"
        android:layout_height="@dimen/zero_state_search_content_group_item_icon_size"
        android:tint="?attr/colorPrimaryBrandIcon"
        android:layout_marginStart="@dimen/zero_state_search_content_groups_horizontal_padding"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:ellipsize="end"
        android:id="@+id/content_group_item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textIsSelectable="false"
        android:layout_marginStart="@dimen/zero_state_search_content_groups_horizontal_spacing"/>
</com.google.android.apps.messaging.ui.search.homeview.CategoryGroupItemView>
