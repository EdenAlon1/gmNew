<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/custom_sticker_gallery_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/emotify_gallery_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <android.support.constraint.Guideline
        android:orientation="horizontal"
        android:id="@+id/header_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ViewStub
        android:id="@+id/zero_state_image"
        android:layout="@layout/emotify_zero_state_layout"
        android:inflatedId="@+id/zero_state_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/emotify_tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_guideline"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/emotify_tabs"
        android:layout_width="0dp"
        android:layout_height="@dimen/emotify_bottom_tab_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabIndicator="@drawable/gifsticker_bottom_bar_selected_item_indicator"
        app:tabMode="fixed"
        style="@style/ComposeScreenBottomTabLayoutStyle"/>
</android.support.constraint.ConstraintLayout>
