<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gm_tooltip_container"
    android:rowCount="3"
    style="@style/TooltipLayout">
    <TextView
        android:id="@+id/gm_tooltip_title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp"
        style="@style/TooltipTitle"/>
    <TextView
        android:id="@+id/gm_tooltip_detail"
        android:layout_marginBottom="8dp"
        style="@style/TooltipDetail"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/gm_tooltip_action_button"
        android:layout_marginBottom="12dp"
        style="@style/TooltipActionButton"/>
</LinearLayout>
