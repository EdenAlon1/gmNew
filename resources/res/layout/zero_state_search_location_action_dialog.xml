<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/zero_state_search_location_dialog_height">
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead1"
        android:textColor="?attr/colorOnSurface"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/zero_state_search_location_street_level_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zero_state_search_location_dialog_text_margin"
        android:maxLines="1"
        android:layout_marginStart="@dimen/zero_state_search_location_dialog_text_margin"
        android:layout_marginEnd="@dimen/zero_state_search_location_dialog_text_margin"
        app:layout_constraintEnd_toStartOf="@+id/zero_state_search_location_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/zero_state_search_location_city_level_address_text_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/zero_state_search_location_city_level_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/zero_state_search_location_dialog_city_level_address_margin_top"
        android:maxLines="1"
        android:layout_marginStart="@dimen/zero_state_search_location_dialog_text_margin"
        android:layout_marginEnd="@dimen/zero_state_search_location_dialog_text_margin"
        app:layout_constraintEnd_toStartOf="@+id/zero_state_search_location_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zero_state_search_location_street_level_address"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubhead2"
        android:textSize="@dimen/zero_state_search_location_sender_and_date_text_size"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/zero_state_search_location_sender_and_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/zero_state_search_location_dialog_text_margin"
        android:layout_marginEnd="@dimen/zero_state_search_location_dialog_text_margin"
        app:layout_constraintBottom_toBottomOf="@+id/zero_state_search_location_image"
        app:layout_constraintEnd_toStartOf="@+id/zero_state_search_location_image"
        app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.apps.messaging.shared.ui.RoundedImageView
        android:id="@+id/zero_state_search_location_image"
        android:layout_width="@dimen/zero_state_search_location_dialog_map_width"
        android:layout_height="@dimen/zero_state_search_location_dialog_map_height"
        android:layout_marginTop="@dimen/zero_state_search_location_dialog_text_margin"
        android:src="@drawable/zero_state_search_location_map_placeholder_sheet"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/zero_state_search_location_dialog_text_margin"
        app:adjustAspectRatio="false"
        app:imageCornerRadius="@dimen/zero_state_search_sheet_image_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/zero_state_search_location_dialog_chips_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/search_bottom_sheet_chips_container"
            android:paddingTop="@dimen/zero_state_search_location_dialog_chips_vertical_padding"
            android:paddingBottom="@dimen/zero_state_search_location_dialog_chips_vertical_padding"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/zero_state_search_location_dialog_chips_horizontal_padding"
            android:paddingEnd="@dimen/zero_state_search_location_dialog_chips_horizontal_padding">
            <com.google.android.material.chip.Chip
                android:id="@+id/zero_state_search_location_dialog_jump_to_chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_state_search_action_jump_to_chat"
                android:layout_marginEnd="@dimen/zero_state_search_location_dialog_chip_margin"
                app:chipIcon="@drawable/quantum_gm_ic_googleplus_reshare_vd_theme_24"
                app:ensureMinTouchTargetSize="true"
                style="@style/ZeroStateSearchChip"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/zero_state_search_location_dialog_maps_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_state_search_action_maps"
                android:layout_marginEnd="@dimen/zero_state_search_location_dialog_chip_margin"
                app:chipIcon="@drawable/product_logo_maps_color_24"
                app:chipIconTint="@null"
                app:ensureMinTouchTargetSize="true"
                style="@style/ZeroStateSearchChip"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/zero_state_search_location_dialog_copy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_state_search_action_copy"
                android:layout_marginEnd="@dimen/zero_state_search_location_dialog_chip_margin"
                app:chipIcon="@drawable/quantum_gm_ic_content_copy_vd_theme_24"
                app:ensureMinTouchTargetSize="true"
                style="@style/ZeroStateSearchChip"/>
            <ViewStub
                android:id="@+id/zero_state_search_location_dialog_star_button"
                android:layout="@layout/zero_state_search_bottom_sheet_star_chip"
                android:inflatedId="@+id/zero_state_search_location_dialog_star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/zero_state_search_location_dialog_chip_margin"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/zero_state_search_location_dialog_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero_state_search_action_share"
                app:chipIcon="@drawable/quantum_gm_ic_share_vd_theme_24"
                app:ensureMinTouchTargetSize="true"
                style="@style/ZeroStateSearchChip"/>
        </LinearLayout>
    </HorizontalScrollView>
</android.support.constraint.ConstraintLayout>
