<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/standard_corner_radius">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mini_camera_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.camera.view.PreviewView
            android:id="@+id/mini_camera_preview_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/flip_camera_button"
            android:background="@drawable/mini_camera_button_background"
            android:padding="@dimen/mini_camera_button_padding"
            android:visibility="gone"
            android:layout_width="@dimen/mini_camera_button_size"
            android:layout_height="@dimen/mini_camera_button_size"
            android:layout_marginTop="@dimen/mini_camera_button_margin"
            android:src="@drawable/quantum_gm_ic_flip_camera_android_white_24"
            android:scaleType="fitCenter"
            android:contentDescription="@string/flip_camera_button_label"
            android:layout_marginStart="@dimen/mini_camera_button_margin"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="@+id/mini_camera_preview_view"
            app:layout_constraintTop_toTopOf="@+id/mini_camera_preview_view"/>
        <ImageView
            android:id="@+id/open_fullscreen_camera_button"
            android:background="@drawable/mini_camera_button_background"
            android:padding="@dimen/mini_camera_button_padding"
            android:layout_width="@dimen/mini_camera_button_size"
            android:layout_height="@dimen/mini_camera_button_size"
            android:layout_marginTop="@dimen/mini_camera_button_margin"
            android:src="@drawable/fullscreen_camera_icon"
            android:scaleType="fitCenter"
            android:contentDescription="@string/open_full_screen_camera_button_label"
            android:layout_marginEnd="@dimen/mini_camera_button_margin"
            android:elevation="2dp"
            app:layout_constraintEnd_toEndOf="@+id/mini_camera_preview_view"
            app:layout_constraintTop_toTopOf="@+id/mini_camera_preview_view"/>
        <ImageView
            android:id="@+id/shutter_button"
            android:padding="@dimen/mini_camera_shutter_button_padding"
            android:layout_width="@dimen/mini_camera_button_size_landscape"
            android:layout_height="@dimen/mini_camera_button_size_landscape"
            android:layout_margin="@dimen/mini_camera_shutter_button_margin"
            android:src="@drawable/mini_camera_shutter_button_background"
            android:contentDescription="@string/camera_capture_button_label"
            android:elevation="@dimen/mini_camera_shutter_button_elevation"
            app:layout_constraintBottom_toBottomOf="@+id/mini_camera_preview_view"
            app:layout_constraintEnd_toEndOf="@+id/mini_camera_preview_view"
            app:layout_constraintStart_toStartOf="@+id/mini_camera_preview_view"/>
        <View
            android:id="@+id/mini_camera_indicator"
            android:background="@drawable/viewfinder_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/mini_camera_indicator_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/open_full_screen_camera_button_label"
            app:layout_constraintBottom_toBottomOf="@+id/mini_camera_preview_view"
            app:layout_constraintEnd_toEndOf="@+id/mini_camera_preview_view"
            app:layout_constraintStart_toStartOf="@+id/mini_camera_preview_view"
            app:layout_constraintTop_toTopOf="@+id/mini_camera_preview_view"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
