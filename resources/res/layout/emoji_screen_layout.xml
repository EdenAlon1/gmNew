<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emoji_gallery_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/emoji_gallery_recycler_view"
        android:paddingBottom="@dimen/emoji_tab_height"
        android:scrollbars="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/emoji_item_icon_padding"
        android:paddingEnd="@dimen/emoji_item_icon_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/emoji_categories_tab_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/emoji_tab_height"
        android:importantForAccessibility="yes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/emoji_bar_backspace"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/EmojiTabLayoutStyle"/>
    <View
        android:id="@+id/emoji_bar_backspace_background"
        android:background="@drawable/compose_screen_bottom_bar_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="@+id/emoji_bar_backspace"
        app:layout_constraintEnd_toEndOf="@+id/emoji_bar_backspace"
        app:layout_constraintStart_toStartOf="@+id/emoji_bar_backspace"
        app:layout_constraintTop_toTopOf="@+id/emoji_bar_backspace"/>
    <ImageButton
        android:id="@+id/emoji_bar_backspace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/quantum_gm_ic_backspace_vd_theme_24"
        android:contentDescription="@string/emoji_gallery_backspace_content_description"
        android:importantForAccessibility="yes"
        android:backgroundTint="@color/google_bottom_nav_ripple_color_selector"
        android:accessibilityTraversalAfter="@+id/emoji_categories_tab_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/emoji_categories_tab_layout"
        app:layout_constraintTop_toTopOf="@+id/emoji_categories_tab_layout"/>
    <View
        android:id="@+id/recycler_view_bottom_border_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toTopOf="@+id/emoji_categories_tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emoji_categories_tab_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
