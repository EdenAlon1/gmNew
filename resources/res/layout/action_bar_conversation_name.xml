<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conversation_title_container"
    android:background="@drawable/conversation_title_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/min_touch_target_size">
    <com.google.android.apps.messaging.shared.ui.ContactIconView
        android:layout_gravity="center_vertical"
        android:id="@+id/action_bar_contact_icon"
        android:layout_width="@dimen/contact_icon_view_normal_size"
        android:layout_height="@dimen/contact_icon_view_normal_size"
        android:importantForAccessibility="no"
        android:layout_marginEnd="8dp"
        app:contactIconSize="normal"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:ellipsize="end"
            android:id="@+id/conversation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="viewStart"/>
        <TextView
            android:textAppearance="?attr/textAppearanceCaption"
            android:textSize="14sp"
            android:ellipsize="end"
            android:id="@+id/conversation_subtitle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="viewStart"/>
    </LinearLayout>
</LinearLayout>
