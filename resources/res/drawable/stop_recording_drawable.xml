<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/fab_ripple">
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size
                        android:height="48dp"
                        android:width="48dp"/>
                    <solid android:color="@color/google_red500"/>
                </shape>
            </item>
            <item
                android:left="17dp"
                android:top="17dp"
                android:right="17dp"
                android:bottom="17dp">
                <shape android:shape="rectangle">
                    <corners android:radius="2dp"/>
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
