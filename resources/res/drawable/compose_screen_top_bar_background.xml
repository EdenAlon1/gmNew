<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/colorSurfaceVariant"/>
        </shape>
    </item>
    <item android:bottom="1dp">
        <shape android:tint="?android:attr/colorBackground">
            <gradient
                android:startColor="@color/compose_screen_bottom_bar_background_top"
                android:endColor="@color/compose_screen_bottom_bar_background_bottom"
                android:angle="90"
                android:type="linear"
                android:centerColor="@color/compose_screen_bottom_bar_background_bottom"/>
        </shape>
    </item>
</layer-list>
