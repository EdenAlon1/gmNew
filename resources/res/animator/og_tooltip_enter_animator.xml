<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android" android:ordering="together">
    <objectAnimator
        android:interpolator="@android:interpolator/linear"
        android:duration="@integer/og_tooltip_alpha_duration_ms"
        android:valueFrom="0"
        android:valueTo="1"
        android:propertyName="tooltipAlpha"/>
    <objectAnimator
        android:interpolator="@android:interpolator/linear"
        android:duration="@integer/og_content_alpha_duration_ms"
        android:startOffset="@integer/og_tooltip_alpha_duration_ms"
        android:valueFrom="0"
        android:valueTo="1"
        android:propertyName="contentAlpha"/>
    <objectAnimator
        android:interpolator="@interpolator/mtrl_fast_out_slow_in"
        android:duration="@integer/og_tooltip_scale_rounded_rectangle_duration_ms"
        android:valueFrom="0"
        android:valueTo="1"
        android:propertyName="bubbleWidthScale"/>
</set>
