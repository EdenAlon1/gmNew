<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">
    <transitionSet
        android:interpolator="@interpolator/mtrl_linear"
        android:duration="@integer/message_box_sliding_animation_duration_millis">
        <changeBounds/>
        <changeTransform/>
        <targets>
            <target android:targetId="@+id/compose_message_box_linear_layout"/>
            <target android:targetId="@+id/audio_timer_dot"/>
            <target android:targetId="@+id/audio_timer_text"/>
            <target android:targetId="@+id/plus_button"/>
            <target android:targetId="@+id/magic_button"/>
            <target android:targetId="@+id/camera_gallery_button"/>
            <target android:targetId="@+id/record_cancel_button_v1"/>
        </targets>
    </transitionSet>
    <transitionSet
        android:duration="0"
        android:startDelay="@integer/message_box_sliding_animation_duration_millis">
        <fade/>
        <targets>
            <target android:targetId="@+id/plus_button"/>
            <target android:targetId="@+id/camera_gallery_button"/>
            <target android:targetId="@+id/magic_button"/>
        </targets>
    </transitionSet>
    <transitionSet
        android:duration="@integer/message_box_sliding_animation_duration_millis"
        android:startDelay="0">
        <fade/>
        <targets>
            <target android:targetId="@+id/record_cancel_button_v1"/>
        </targets>
    </transitionSet>
</transitionSet>
