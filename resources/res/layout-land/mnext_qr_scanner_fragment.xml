<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/qr_scanner_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.apps.messaging.ui.ditto.CameraSourcePreview
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.apps.messaging.ui.ditto.QrScannerOverlayView
            android:background="?attr/colorBackgroundDark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.5"
            android:paddingEnd="@dimen/qr_code_scanning_horizontal_space"
            app:centerVertical="true"
            app:squareGravity="end"
            app:squareSize="@dimen/qr_code_scanning_area_size"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:background="?attr/colorBackgroundDark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:alpha="0.5"/>
            <TextView
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/quantum_white_100"
                android:gravity="start|center_vertical"
                android:id="@+id/qr_scanner_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxWidth="@dimen/qr_code_scanning_hint_area_size"
                android:text="@string/qr_code_scanner_hint_text"
                android:textAlignment="viewStart"
                android:paddingStart="@dimen/qr_code_scanning_horizontal_space"/>
        </FrameLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/qr_loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/qr_loading_overlay_background"
            android:background="?attr/colorBackgroundDark"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"/>
        <ProgressBar
            android:id="@+id/qr_loading_progress_bar"
            android:background="@color/google_transparent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerInParent="true"
            android:importantForAccessibility="no"
            android:paddingEnd="@dimen/qr_code_scanning_area_landscape_loading_spacing_end"
            android:indeterminateTint="@color/google_white"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/qr_code_scanning_area_landscape_success_spacing_top"
            android:layout_width="@dimen/qr_code_scanning_area_landscape_success_width"
            android:layout_height="@dimen/qr_code_scanning_area_size"
            android:layout_centerInParent="true"
            android:paddingEnd="@dimen/qr_code_scanning_area_landscape_loading_spacing_end">
            <TextView
                android:textColor="@color/bugle_color_text_white"
                android:id="@+id/qr_loading_checkmark"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qr_success_text_view"
                android:drawableTop="@drawable/quantum_ic_done_white_48"
                android:drawablePadding="@dimen/qr_code_scanning_area_success_text_spacing_top"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
